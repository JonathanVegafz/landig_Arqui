---
import Logo from '../assets/Logo.png';
---

<header class="header">
  <div class="container header__content">
    <a href="#inicio" class="header__logo" aria-label="Ir al inicio">
      <img src={Logo.src} alt="Logo IG Construcciones" class="logo-img" />
      <span class="logo-text">IG Construcciones</span>
    </a>
    
    <!-- Botón hamburguesa para móviles -->
    <button class="header__menu-toggle" aria-label="Abrir menú de navegación" aria-expanded="false">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
    
    <!-- Navegación desktop -->
    <nav class="header__nav" role="navigation" aria-label="Navegación principal">
      <a href="#inicio" class="nav-link">Inicio</a>
      <a href="#sobre-mi" class="nav-link">Sobre Nosotros</a>
      <a href="#proceso" class="nav-link">Proceso</a>
      <a href="#cotiza" class="nav-link">Contacto</a>
    </nav>
    
    <!-- Navegación móvil -->
    <nav class="header__nav-mobile" role="navigation" aria-label="Navegación móvil">
      <a href="#inicio" class="mobile-nav-link">Inicio</a>
      <a href="#sobre-mi" class="mobile-nav-link">Sobre Nosotros</a>
      <a href="#proceso" class="mobile-nav-link">Proceso</a>
      <a href="#cotiza" class="mobile-nav-link">Contacto</a>
    </nav>
  </div>
  
  <script>
    // Funcionalidad del menú hamburguesa
    document.addEventListener('DOMContentLoaded', () => {
      const menuToggle = document.querySelector('.header__menu-toggle');
      const navMobile = document.querySelector('.header__nav-mobile');
      const body = document.body;
      
      if (menuToggle && navMobile) {
        menuToggle.addEventListener('click', () => {
          const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
          
          // Toggle del estado del botón
          menuToggle.setAttribute('aria-expanded', (!isExpanded).toString());
          
          // Toggle de las clases para animación
          menuToggle.classList.toggle('active');
          navMobile.classList.toggle('active');
          body.classList.toggle('menu-open');
        });
        
        // Cerrar menú al hacer clic en un enlace
        const mobileLinks = navMobile.querySelectorAll('a');
        mobileLinks.forEach(link => {
          link.addEventListener('click', () => {
            menuToggle.classList.remove('active');
            navMobile.classList.remove('active');
            body.classList.remove('menu-open');
            menuToggle.setAttribute('aria-expanded', 'false');
          });
        });
        
        // Cerrar menú al hacer clic fuera
        document.addEventListener('click', (e) => {
          const target = e.target as Node;
          if (!menuToggle.contains(target) && !navMobile.contains(target)) {
            menuToggle.classList.remove('active');
            navMobile.classList.remove('active');
            body.classList.remove('menu-open');
            menuToggle.setAttribute('aria-expanded', 'false');
          }
        });
      }
    });
  </script>
  
  <style>
    .header {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      color: var(--color-neutral-900);
      padding: var(--spacing-md) 0;
      position: sticky;
      top: 0;
      z-index: 100;
      border-bottom: 1px solid var(--color-neutral-200);
      transition: all var(--transition-normal);
    }
    
    .header__content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: relative;
    }
    
    .header__logo {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      font-family: var(--font-display);
      font-size: 1.5rem;
      font-weight: 700;
      text-decoration: none;
      color: var(--color-neutral-900);
      z-index: 12;
      transition: all var(--transition-fast);
    }
    
    .header__logo:hover {
      transform: translateY(-1px);
    }
    
    .logo-img {
      height: 42px;
      width: auto;
      border-radius: var(--border-radius-sm);
      background: white;
      padding: 4px;
      box-shadow: var(--shadow-sm);
    }
    
    .logo-text {
      font-weight: 600;
      letter-spacing: -0.5px;
    }
    
    .header__nav {
      display: flex;
      gap: var(--spacing-xl);
      align-items: center;
    }
    
    .nav-link {
      color: var(--color-neutral-700);
      font-size: 1rem;
      font-weight: 500;
      transition: all var(--transition-fast);
      text-decoration: none;
      position: relative;
      padding: var(--spacing-xs) 0;
    }
    
    .nav-link::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--color-primary);
      transition: width var(--transition-normal);
    }
    
    .nav-link:hover {
      color: var(--color-primary);
    }
    
    .nav-link:hover::after {
      width: 100%;
    }
    
    /* Botón hamburguesa mejorado */
    .header__menu-toggle {
      display: none;
      flex-direction: column;
      justify-content: space-around;
      width: 32px;
      height: 32px;
      background: transparent;
      border: none;
      cursor: pointer;
      padding: 0;
      z-index: 12;
      border-radius: var(--border-radius-sm);
      transition: all var(--transition-fast);
    }
    
    .header__menu-toggle:hover {
      background: var(--color-neutral-100);
    }
    
    .hamburger-line {
      width: 100%;
      height: 2px;
      background: var(--color-neutral-700);
      border-radius: 1px;
      transition: all var(--transition-normal);
      transform-origin: center;
    }
    
    /* Animación del botón hamburguesa */
    .header__menu-toggle.active .hamburger-line:nth-child(1) {
      transform: rotate(45deg) translate(6px, 6px);
      background: var(--color-primary);
    }
    
    .header__menu-toggle.active .hamburger-line:nth-child(2) {
      opacity: 0;
      transform: scale(0);
    }
    
    .header__menu-toggle.active .hamburger-line:nth-child(3) {
      transform: rotate(-45deg) translate(6px, -6px);
      background: var(--color-primary);
    }
    
    /* Navegación móvil mejorada */
    .header__nav-mobile {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(20px);
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: var(--spacing-xl);
      z-index: 11;
      opacity: 0;
      visibility: hidden;
      transition: all var(--transition-normal);
    }
    
    .header__nav-mobile.active {
      opacity: 1;
      visibility: visible;
    }
    
    .mobile-nav-link {
      color: var(--color-neutral-700);
      font-size: 1.5rem;
      font-weight: 500;
      text-decoration: none;
      transition: all var(--transition-fast);
      padding: var(--spacing-md) var(--spacing-xl);
      border-radius: var(--border-radius-lg);
      background: transparent;
      position: relative;
      overflow: hidden;
    }
    
    .mobile-nav-link::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: var(--color-primary);
      transition: left var(--transition-normal);
      z-index: -1;
    }
    
    .mobile-nav-link:hover {
      color: white;
    }
    
    .mobile-nav-link:hover::before {
      left: 0;
    }
    
    /* Prevenir scroll cuando el menú está abierto */
    body.menu-open {
      overflow: hidden;
    }
    
    /* Media queries */
    @media (max-width: 900px) {
      .header__nav {
        display: none;
      }
      
      .header__menu-toggle {
        display: flex;
      }
      
      .header__nav-mobile {
        display: flex;
      }
      
      .header__content {
        flex-direction: row;
        gap: 0;
      }
    }
    
    @media (min-width: 769px) {
      .header__nav-mobile {
        display: none !important;
      }
    }
    
    @media (max-width: 480px) {
      .logo-text {
        font-size: 1.25rem;
      }
      
      .logo-img {
        height: 36px;
      }
    }
  </style>
</header> 