---
import Logo from '../assets/Logo.png';
---
<header class="header">
  <div class="container header__content">
    <a href="#inicio" class="header__logo" aria-label="Ir al inicio">
      <img src={Logo.src} alt="Logo IG Construcciones" class="logo-img" />
      <span>IG Construcciones</span>
    </a>
    <nav class="header__nav" role="navigation" aria-label="NavegaciÃ³n principal">
      <a href="#inicio">Inicio</a>
      <a href="#sobre-mi">Sobre Nosotros</a>
      <a href="#proceso">Proceso</a>
      <a href="#cotiza">Contacto</a>
    </nav>
  </div>
  <style>
    .header {
      background: var(--color-secondary);
      color: #fff;
      padding: 1.5rem 0;
      position: sticky;
      top: 0;
      z-index: 10;
    }
    .header__content {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .header__logo {
      display: flex;
      align-items: center;
      gap: 0.7rem;
      font-size: 1.7rem;
      font-weight: bold;
      letter-spacing: 2px;
      text-decoration: none;
      color: inherit;
    }
    .logo-img {
      height: 38px;
      width: auto;
      border-radius: 6px;
      background: #fff;
      padding: 2px;
    }
    .header__nav {
      display: flex;
      gap: 2rem;
    }
    .header__nav a {
      color: #fff;
      font-size: 1rem;
      font-weight: 500;
      transition: color 0.2s;
      text-decoration: none;
    }
    .header__nav a:hover {
      color: var(--color-secondary);
    }
    @media (max-width: 768px) {
      .header__content {
        flex-direction: column;
        gap: 1rem;
      }
      .header__nav {
        gap: 1rem;
      }
    }
  </style>
</header> 