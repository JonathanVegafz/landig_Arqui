---
interface Props {
  icon?: string;
  title: string;
  features: string[];
  class?: string;
}

const { icon, title, features, class: className } = Astro.props;
---

<article class={`card-base card-hover card-top-border ${className || ''}`}>
  {icon && (
    <!-- set:html seguro: el string SVG proviene de props controladas internamente y no de input del usuario -->
    <div class="servicio-card__icon" aria-hidden="true" set:html={icon}></div>
  )}
  <div class="servicio-card__content">
    <h3 class="servicio-card__title">{title}</h3>
    <ul class="feature-list-check servicio-card__features">
      {features.map(feature => (
        <li>
          <span>{feature}</span>
        </li>
      ))}
    </ul>
  </div>
</article>

<style>
  /* Estilos específicos únicos del ServiceCard */
  .servicio-card__icon {
    color: var(--color-primary);
    margin-bottom: 1.5rem;
    flex-shrink: 0;
  }

  .servicio-card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .servicio-card__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-neutral-900);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .servicio-card__features {
    flex: 1;
  }
</style>
