---
import { Image } from 'astro:assets';
import heroImage from '../../assets/optimized/hero-hero.webp';
import Typewriter from '../ui/Typewriter.astro';
---

<section class="hero parallax section-bg-white hero-container" id="inicio" aria-label="Sección principal: Arquitectura que Inspira">
  <div class="hero-background">
  <Image src={heroImage} alt="Edificio moderno con diseño arquitectónico innovador de IG Construcciones" class="hero-image" loading="eager" fetchpriority="high" decoding="async" format="webp" quality={90} width={1920} height={1080} sizes="100vw" />
  </div>
  <div class="hero-overlay">
    <div class="container hero-content">
      <header class="hero__text">
        <h1 class="hero-title">
          <span class="visually-hidden">Arquitectura que inspira, construcción que perdura</span>
          <span class="hero-title-line" aria-hidden="true">Arquitectura que <span class="hero-highlight">Inspira</span></span>
          <span class="hero-title-line" aria-hidden="true">Construcción que <span class="hero-highlight">Perdura</span></span>
        </h1>
        <Typewriter
          texts={[
            'Creamos espacios únicos que reflejan tu personalidad',
            'Diseños sostenibles que respetan el medio ambiente',
            'Calidad garantizada en cada detalle de construcción',
            'Experiencia y confianza en cada proyecto'
          ]}
        />
      </header>
      <ul class="feature-list" role="list" aria-label="Características destacadas">
        <li class="feature-item">Experiencia certificada</li>
        <li class="feature-item">Eficiencia energética</li>
        <li class="feature-item">Construcción sustentable</li>
      </ul>
      <div class="hero-buttons">
        <a href="#cotiza" class="btn btn--lg hero-btn">
          <span>Cotiza tu Proyecto</span>
        </a>
        <a href="https://wa.me/56945150212" class="btn btn--secondary btn--lg whatsapp-btn" target="_blank" rel="noopener" aria-label="Contáctanos por WhatsApp">
          <span>WhatsApp</span>
        </a>
      </div>
    </div>
  </div>
</section>


<style>
  /* Estilos base del Hero */
  .hero-container {
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    padding: var(--spacing-2xl) var(--spacing-md);
    max-width: 800px;
    margin: 0 auto;
  }

  .hero__text { 
    margin-bottom: var(--spacing-xl); 
  }

  .hero-title {
    margin-bottom: var(--spacing-lg);
    text-align: center;
  }

  .hero-title-line {
    display: block;
    margin-bottom: 0.2em;
    line-height: 1.1;
  }

  /* Typewriter styles */
  .typewriter {
    display: block;
    text-align: center;
    font-size: 1.2rem;
    line-height: 1.5;
    margin: var(--spacing-lg) 0;
    min-height: 2.4rem; /* Evita que el contenedor cambie de tamaño */
    color: white;
  }

  /* Botones */
  .hero-buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
    margin-top: var(--spacing-xl);
  }

  .whatsapp-btn { 
    background: #25d366 !important; 
    color: #fff !important;
    border: none !important;
  }
  
  .whatsapp-btn:hover { 
    background: #128c7e !important; 
    color: #fff !important;
    transform: translateY(-2px);
  }

  .hero-btn, .whatsapp-btn {
    min-width: 200px;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all var(--transition-fast);
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Feature list */
  .feature-list { 
    display: flex; 
    gap: 1rem; 
    margin: var(--spacing-lg) 0; 
    flex-wrap: wrap; 
    justify-content: center;
    list-style: none;
    padding: 0;
  }
  
  .feature-item { 
    background: rgba(255,255,255,.7); 
    padding: 0.75rem 1.25rem; 
    border-radius: 2rem; 
    font-size: 0.9rem; 
    font-weight: 500; 
    backdrop-filter: blur(10px); 
    white-space: nowrap;
    color: var(--color-neutral-800);
    border: 1px solid rgba(255,255,255,0.3);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-content {
      padding: var(--spacing-xl) var(--spacing-md);
      max-width: 100%;
    }

    .hero-title-line {
      font-size: clamp(2rem, 6vw, 2.8rem);
    }

    .typewriter {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: var(--spacing-lg) var(--spacing-sm);
    }

    .hero-title-line {
      font-size: clamp(1.75rem, 8vw, 2.2rem);
    }

    .typewriter {
      font-size: 1rem;
      margin: var(--spacing-md) 0;
    }

    .hero-buttons {
      flex-direction: column;
      gap: var(--spacing-sm);
      margin-top: var(--spacing-lg);
    }

    .hero-btn, .whatsapp-btn {
      width: 100%;
      max-width: 300px;
      min-width: auto;
    }
    
    .feature-list {
      gap: 0.75rem;
      margin: var(--spacing-md) 0;
    }
    
    .feature-item {
      font-size: 0.85rem;
      padding: 0.5rem 1rem;
      flex: 1;
      text-align: center;
      min-width: 140px;
    }
  }

  @media (max-width: 480px) {
    .hero-content {
      padding: var(--spacing-md) var(--spacing-sm);
    }

    .hero-title-line {
      font-size: clamp(1.5rem, 10vw, 1.8rem);
      line-height: 1.2;
    }

    .hero__text {
      margin-bottom: var(--spacing-md);
    }

    .typewriter {
      font-size: 0.95rem;
      margin: var(--spacing-sm) 0;
      min-height: 2rem;
    }

    .feature-list {
      flex-direction: column;
      gap: 0.5rem;
      margin: var(--spacing-sm) 0 var(--spacing-md);
      align-items: center;
    }
    
    .feature-item {
      flex: none;
      width: auto;
      max-width: 250px;
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }

    .hero-buttons {
      margin-top: var(--spacing-md);
    }

    .hero-btn, .whatsapp-btn {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
      max-width: 280px;
    }
  }

  /* Extra pequeño */
  @media (max-width: 360px) {
    .hero-content {
      padding: var(--spacing-sm);
    }

    .hero-title-line {
      font-size: clamp(1.25rem, 12vw, 1.5rem);
    }

    .typewriter {
      font-size: 0.9rem;
    }

    .feature-item {
      font-size: 0.75rem;
      padding: 0.3rem 0.6rem;
    }
  }
</style>
