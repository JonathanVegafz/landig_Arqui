---
import heroImage from '../../assets/hero.webp';
---

<section class="hero parallax section-bg-white" id="inicio" aria-label="Sección principal: Arquitectura que Inspira">
  <div class="hero__background">
    <img src={heroImage.src} alt="Arquitectura moderna" class="hero__image" />
  </div>
  <div class="hero__overlay">
    <div class="container hero__content">
      <div class="hero__text">
        <h1 class="hero__title">
          <span class="hero__title-line">Arquitectura que <span class="hero__highlight">Inspira</span></span>
          <span class="hero__title-line">Construcción que <span class="hero__highlight">Perdura</span></span>
        </h1>
        <p id="typewriter-p" class="typewriter" aria-live="polite"></p>
      </div>
      
      <ul class="hero__features" role="list" aria-label="Características destacadas">
        <li class="hero__feature">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path d="M9 12l2 2 4-4"/>
            <path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9 9 4.03 9 9z"/>
          </svg>
          <span>20+ Años de Experiencia</span>
        </li>
        <li class="hero__feature">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9,22 9,12 15,12 15,22"/>
          </svg>
          <span>100+ Proyectos Completados</span>
        </li>
        <li class="hero__feature">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path d="M12 2v20M2 12h20"/>
            <path d="M12 2a10 10 0 0 1 0 20 10 10 0 0 1 0-20z"/>
          </svg>
          <span>Eficiencia Energética</span>
        </li>
      </ul>
      
      <div class="hero-btns">
        <a href="#cotiza" class="btn btn-primary hero-btn">
          <span>Cotiza tu Proyecto</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="https://wa.me/56945150212" class="btn btn-secondary whatsapp-btn" target="_blank" rel="noopener" aria-label="Contáctanos por WhatsApp">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.52 3.48A12.07 12.07 0 0 0 12 0C5.37 0 0 5.37 0 12c0 2.11.55 4.18 1.6 6.01L0 24l6.18-1.62A11.94 11.94 0 0 0 12 24c6.63 0 12-5.37 12-12 0-3.19-1.24-6.19-3.48-8.52zM12 22c-1.77 0-3.5-.46-5.01-1.33l-.36-.21-3.67.96.98-3.58-.23-.37A9.94 9.94 0 0 1 2 12C2 6.48 6.48 2 12 2c2.54 0 4.93.99 6.73 2.77A9.93 9.93 0 0 1 22 12c0 5.52-4.48 10-10 10zm5.2-7.6c-.28-.14-1.65-.81-1.9-.9-.25-.09-.43-.14-.61.14-.18.28-.7.9-.86 1.08-.16.18-.32.2-.6.07-.28-.14-1.18-.44-2.25-1.4-.83-.74-1.39-1.65-1.55-1.93-.16-.28-.02-.43.12-.57.12-.12.28-.32.42-.48.14-.16.18-.28.28-.46.09-.18.05-.34-.02-.48-.07-.14-.61-1.47-.84-2.01-.22-.53-.45-.46-.61-.47-.16-.01-.34-.01-.52-.01-.18 0-.48.07-.73.34-.25.27-.97.95-.97 2.3 0 1.35.99 2.65 1.13 2.83.14.18 1.95 2.98 4.73 4.06.66.28 1.18.45 1.58.58.66.21 1.26.18 1.73.11.53-.08 1.65-.67 1.88-1.32.23-.65.23-1.2.16-1.32-.07-.12-.25-.18-.53-.32z"/>
          </svg>
          <span>WhatsApp</span>
        </a>
      </div>
    </div>
  </div>
  
  <style>
    .hero.parallax { 
      min-height: 90vh; 
      display: flex; 
      align-items: center; 
      position: relative;
      overflow: hidden;
    }
    
    .hero__background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
    }
    
    .hero__image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
    
    .hero__overlay { 
      position: absolute; 
      top: 0; 
      left: 0; 
      width: 100%; 
      height: 100%; 
      background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(41, 71, 88, 0.7) 100%);
      display: flex; 
      align-items: center; 
      justify-content: center; 
      z-index: 1; 
    }
    
    .hero__content {
      text-align: center; 
      color: white; 
      padding: var(--spacing-xl) var(--spacing-md); 
      position: relative; 
      z-index: 2;
      max-width: 700px;
    }
    
    .hero__text {
      margin-bottom: var(--spacing-xl);
    }
    
    .hero__title {
      font-family: var(--font-display);
      font-weight: 700;
      line-height: 1.1;
      margin-bottom: var(--spacing-lg);
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 1s ease-out 0.5s forwards;
      color: white !important;
    }
    
    .hero__title-line {
      display: block;
      font-size: clamp(2rem, 6vw, 3.5rem);
      margin-bottom: 0.15em;
      color: white;
    }
    
    .hero__highlight {
      color: var(--color-primary) !important;
    }
    
    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .typewriter {
      min-height: 2.5em; 
      font-weight: 400;
      font-size: 1.25rem;
      max-width: 90%;
      margin: 0 auto;
      display: inline-block; 
      width: var(--steps);
      overflow: hidden;
      white-space: nowrap; 
      border-right: 3px solid var(--color-primary);
      animation: blink 0.7s infinite;
      opacity: 0;
      animation: fadeIn 1s ease-out 1.2s forwards, blink 0.7s infinite 1.2s;
      color: white;
    }
    
    @keyframes blink {
      from { border-color: var(--color-primary); }
      to { border-color: transparent; }
    }
    
    @keyframes fadeIn {
      to { opacity: 1; }
    }

    .hero__features {
      display: flex;
      justify-content: center;
      gap: var(--spacing-xl);
      margin-bottom: var(--spacing-2xl);
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 1s ease-out 1.3s forwards;
      flex-wrap: wrap;
    }
    
    .hero__feature {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      color: white;
      font-weight: 500;
      font-size: 1rem;
      padding: var(--spacing-sm) var(--spacing-md);
      background: rgba(255, 255, 255, 0.1);
      border-radius: var(--border-radius-lg);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      transition: all var(--transition-normal);
    }
    
    .hero__feature:hover {
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }
    
    .hero__feature svg {
      color: var(--color-primary);
    }

    .hero-btns { 
      display: flex; 
      justify-content: center; 
      align-items: center; 
      gap: var(--spacing-md); 
      flex-wrap: wrap;
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 1s ease-out 1.5s forwards;
    }
    
    .hero-btn {
      font-size: 1.1rem;
      padding: 1rem 2.5rem;
      border-radius: var(--border-radius-lg);
      font-weight: 600;
      text-transform: none;
      letter-spacing: 0.5px;
      box-shadow: var(--shadow-lg);
    }
    
    .hero-btn:hover {
      transform: translateY(-3px);
      box-shadow: var(--shadow-xl);
    }
    
    .whatsapp-btn { 
      background: #25D366;
      color: white;
      border: none;
    }
    
    .whatsapp-btn:hover {
      background: #128C7E;
      color: white;
    }

    @media (max-width: 768px) {
      .hero__title-line {
        font-size: clamp(2rem, 6vw, 3rem);
      }
      
      .typewriter {
        font-size: 1.1rem;
        white-space: normal;
        width: auto; 
        border-right: none;
        animation: none;
        opacity: 1;
        animation: fadeIn 1s ease-out 1.2s forwards;
      }
      
      .hero__features {
        flex-direction: column;
        gap: var(--spacing-sm);
        align-items: center;
      }
      
      .hero__feature {
        font-size: 0.9rem;
        padding: var(--spacing-xs) var(--spacing-sm);
        width: 100%;
        max-width: 280px;
      }
      
      .hero-btns { 
        flex-direction: column; 
        gap: var(--spacing-sm);
        width: 100%;
        max-width: 300px;
        margin: 0 auto;
      }
      
      .hero-btn {
        width: 100%;
        justify-content: center;
      }
    }
    
    @media (max-width: 480px) {
      .hero__content {
        padding: var(--spacing-xl) var(--spacing-sm);
      }
      
      .hero__title-line {
        font-size: clamp(1.8rem, 5vw, 2.5rem);
      }
      
      .hero__features {
        gap: var(--spacing-xs);
      }
      
      .hero__feature {
        font-size: 0.8rem;
        padding: var(--spacing-xs);
        max-width: 250px;
      }
      
      .hero-btns {
        max-width: 280px;
      }
      
      .hero-btn {
        font-size: 1rem;
        padding: 0.875rem 2rem;
      }
    }
    
    @media (max-width: 360px) {
      .hero__title-line {
        font-size: clamp(1.6rem, 4vw, 2rem);
      }
      
      .hero__feature {
        font-size: 0.75rem;
        max-width: 220px;
      }
      
      .hero-btns {
        max-width: 260px;
      }
      
      .hero-btn {
        font-size: 0.9rem;
        padding: 0.75rem 1.5rem;
      }
    }
  </style>
</section>

<script is:inline>
  const frases = [
    "Con casi 20 años de experiencia en la V Región.",
    "Proyectos de alta calidad, diseñados para vivir.",
    "Arquitectura personalizada, eficiencia y confianza.",
    "Soluciones en Metalcom, Paneles SIP y EIFS.",
    "Diseño arquitectónico que optimiza cada metro cuadrado.",
    "¡Haz realidad tu proyecto con nosotros!"
  ];

  const typewriterElement = document.getElementById('typewriter-p');
  
  const sleep = (ms) => new Promise((resolve) => setTimeout(resolve, ms));

  const runTypewriter = async () => {
    let fraseIndex = 0;
    while (true) {
      const fraseActual = frases[fraseIndex];
      
      for (let i = 0; i <= fraseActual.length; i++) {
        const isMobile = window.innerWidth <= 768;
        if (isMobile) {
          typewriterElement.textContent = fraseActual;
          typewriterElement.style.setProperty('--steps', `${fraseActual.length}ch`);
        } else {
          typewriterElement.textContent = fraseActual.substring(0, i);
        }
        await sleep(55); 
      }
      
      await sleep(2000); 

      for (let i = fraseActual.length; i >= 0; i--) {
        typewriterElement.textContent = fraseActual.substring(0, i);
        await sleep(35); 
      }
      
      await sleep(500); 
      
      fraseIndex = (fraseIndex + 1) % frases.length;
    }
  };
  
  document.addEventListener('DOMContentLoaded', runTypewriter);
</script>