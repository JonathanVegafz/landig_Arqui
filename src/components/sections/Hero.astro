---
import { Image } from 'astro:assets';
import heroImage from '../../assets/optimized/hero-hero.webp';
---

<section class="hero parallax section-bg-white hero-container" id="hero" aria-label="Sección principal: Arquitectura que Inspira">
  <div class="hero-background">
  <Image src={heroImage} alt="Edificio moderno con diseño arquitectónico innovador de IG Construcciones" class="hero-image" loading="eager" fetchpriority="high" decoding="async" format="webp" quality={90} width={1920} height={1080} sizes="100vw" />
  </div>
  <div class="hero-overlay">
    <div class="container hero-content">
      <header class="hero__text">
        <h1 class="hero-title">
          <span class="visually-hidden">Arquitectura que inspira, construcción que perdura</span>
          <span class="hero-title-line" aria-hidden="true">Arquitectura que <span class="hero-highlight">Inspira</span></span>
          <span class="hero-title-line" aria-hidden="true">Construcción que <span class="hero-highlight">Perdura</span></span>
        </h1>
        <p id="typewriter-p" class="typewriter" aria-live="polite"></p>
      </header>
      <ul class="feature-list" role="list" aria-label="Características destacadas">
        <li class="feature-item">Arquitectos certificados</li>
        <li class="feature-item">Cobertura 5 regiones</li>
        <li class="feature-item">Construcción sustentable</li>
      </ul>
      <div class="hero-buttons">
        <a href="#cotiza" class="btn btn--lg hero-btn">
          <span>Cotiza tu Proyecto</span>
        </a>
        <a href="https://wa.me/56945150212" class="btn--secondary btn--lg whatsapp-btn" target="_blank" rel="noopener" aria-label="Contáctanos por WhatsApp">
          <span>WhatsApp</span>
        </a>
      </div>
    </div>
  </div>
</section>


<style>
  /* Estilos base del Hero */
  .hero-container {
    position: relative;
    overflow: hidden;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.6) 0%, rgba(41, 71, 88, 0.7) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .hero-content {
    padding: var(--spacing-2xl) var(--spacing-md);
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    text-align: center;
    color: white;
  }

  .hero__text { 
    margin-bottom: var(--spacing-xl); 
  }

  .hero-title {
    margin-bottom: var(--spacing-lg);
    text-align: center;
  }

  .hero-title-line {
    display: block;
    margin-bottom: 0.2em;
    line-height: 1.1;
    font-size: clamp(2rem, 6vw, 3.5rem);
    color: white;
  }

  .hero-highlight {
    color: var(--color-primary) !important;
  }

  /* Typewriter styles */
  .typewriter {
    display: block;
    text-align: center;
    font-size: 1.2rem;
    line-height: 1.5;
    margin: var(--spacing-lg) 0;
    min-height: 2.4rem; /* Evita que el contenedor cambie de tamaño */
    color: white;
    width: 100%;
    word-wrap: break-word;
    white-space: normal;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  /* Botones */
  .hero-buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
    margin-top: var(--spacing-xl);
  }

  .whatsapp-btn { 
    background: #25d366 !important; 
    color: #fff !important;
    border: none !important;
  }
  
  .whatsapp-btn:hover { 
    background: #128c7e !important; 
    color: #fff !important;
    transform: translateY(-2px);
  }

  .hero-btn, .whatsapp-btn {
    min-width: 200px;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all var(--transition-fast);
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Feature list */
  .feature-list { 
    display: flex; 
    gap: 1rem; 
    margin: var(--spacing-lg) 0; 
    flex-wrap: wrap; 
    justify-content: center;
    list-style: none;
    padding: 0;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-content {
      padding: var(--spacing-xl) var(--spacing-md);
      max-width: 100%;
    }

    .hero-title-line {
      font-size: clamp(2rem, 6vw, 2.8rem);
    }

    .typewriter {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 768px) {
    .hero-container {
      min-height: 100vh;
      align-items: flex-end;
      padding-bottom: 10vh;
    }

    .hero-content {
      padding: var(--spacing-lg) var(--spacing-sm);
      min-height: auto;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      margin-bottom: 5vh;
    }

    .hero-title-line {
      font-size: clamp(1.6rem, 7vw, 2.2rem);
    }

    .typewriter {
      font-size: 1rem;
      margin: var(--spacing-md) 0;
      min-height: 4rem;
      line-height: 1.4;
      width: 100%;
      text-align: center;
      word-wrap: break-word;
      white-space: normal;
      overflow-wrap: break-word;
      padding: 0 var(--spacing-sm);
      max-width: 100%;
      box-sizing: border-box;
    }

    .hero-buttons {
      flex-direction: column;
      gap: var(--spacing-sm);
      margin-top: var(--spacing-lg);
    }

    .hero-btn, .whatsapp-btn {
      width: 100%;
      max-width: 300px;
      min-width: auto;
    }
    
    .feature-list {
      gap: 0.75rem;
      margin: var(--spacing-md) 0;
    }
    
  }

  @media (max-width: 480px) {
    .hero-container {
      min-height: 100vh;
      align-items: flex-end;
      padding-bottom: 8vh;
    }

    .hero-content {
      padding: var(--spacing-md) var(--spacing-sm);
      min-height: auto;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      margin-bottom: 5vh;
    }

    .hero-title-line {
      font-size: clamp(1.4rem, 8vw, 1.8rem);
      line-height: 1.2;
      margin-bottom: 0.1em;
    }

    .hero__text {
      margin-bottom: var(--spacing-md);
    }

    .typewriter {
      font-size: 0.9rem;
      margin: var(--spacing-md) 0;
      min-height: 3.5rem;
      line-height: 1.4;
      width: 100%;
      text-align: center;
      word-wrap: break-word;
      white-space: normal;
      overflow-wrap: break-word;
      padding: 0 var(--spacing-xs);
      max-width: 100%;
      box-sizing: border-box;
    }

    .feature-list {
      gap: 0.5rem;
      margin: var(--spacing-md) 0;
      align-items: center;
    }
    

    .hero-buttons {
      margin-top: var(--spacing-lg);
    }

    .hero-btn, .whatsapp-btn {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
      max-width: 280px;
    }
  }

  /* Extra pequeño */
  @media (max-width: 360px) {
    .hero-container {
      min-height: 100vh;
      align-items: flex-end;
      padding-bottom: 5vh;
    }

    .hero-content {
      padding: var(--spacing-sm);
      min-height: auto;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      margin-bottom: 3vh;
    }

    .hero-title-line {
      font-size: clamp(1.2rem, 9vw, 1.5rem);
      line-height: 1.1;
    }

    .typewriter {
      font-size: 0.85rem;
      min-height: 3.2rem;
      margin: var(--spacing-sm) 0 var(--spacing-md);
      width: 100%;
      text-align: center;
      word-wrap: break-word;
      white-space: normal;
      overflow-wrap: break-word;
      padding: 0 var(--spacing-xs);
      max-width: 100%;
      box-sizing: border-box;
      line-height: 1.3;
    }

    .feature-list {
      flex-direction: column;
      gap: 0.4rem;
      margin: var(--spacing-sm) 0 var(--spacing-md);
    }

    .hero-buttons {
      margin-top: var(--spacing-md);
    }

    .hero-btn, .whatsapp-btn {
      padding: 0.75rem 1.25rem;
      font-size: 0.95rem;
      max-width: 250px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const texts = [
      'Arquitectos profesionales con +20 años de experiencia',
      'Diseños arquitectónicos que reflejan tu personalidad',
      'Construcción sustentable y eficiencia energética',
      'Servicios en Coquimbo, Valparaíso, Biobío, La Araucanía y Los Lagos',
      'Calidad garantizada en cada proyecto arquitectónico'
    ];

    let textIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    const typewriterElement = document.getElementById('typewriter-p');

    if (!typewriterElement) return;

    function typeWriter() {
      const currentText = texts[textIndex];
      if (!currentText || !typewriterElement) return;

      if (!isDeleting) {
        typewriterElement.textContent = currentText.slice(0, charIndex + 1);
        charIndex++;

        if (charIndex === currentText.length) {
          setTimeout(() => {
            isDeleting = true;
          }, 2000);
        }
      } else {
        typewriterElement.textContent = currentText.slice(0, charIndex - 1);
        charIndex--;

        if (charIndex === 0) {
          isDeleting = false;
          textIndex = (textIndex + 1) % texts.length;
        }
      }

      const typingSpeed = isDeleting ? 50 : 100;
      setTimeout(typeWriter, typingSpeed);
    }

    setTimeout(() => {
      typeWriter();
    }, 1200);
  });
</script>
