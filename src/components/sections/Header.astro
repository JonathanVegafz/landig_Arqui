---
import { Image } from 'astro:assets';
import logo from '../../assets/optimized/logo-hero.webp';
---

<header class="header" role="banner">
  <div class="container header__content">
    <a href="/" class="header__logo" aria-label="IG Construcciones - Ir al inicio">
      <Image
        src={logo}
        alt="Logotipo de IG Construcciones"
        class="logo-img"
        width={42}
        height={42}
        format="webp"
        quality={90}
      />
      <span class="logo-text" aria-hidden="true">IG Construcciones</span>
    </a>

    <!-- Botón hamburguesa para móviles -->
    <button 
      class="header__menu-toggle" 
      aria-label="Abrir menú de navegación" 
      aria-expanded="false"
      aria-controls="mobile-navigation"
      type="button"
    >
      <span class="hamburger-line" aria-hidden="true"></span>
      <span class="hamburger-line" aria-hidden="true"></span>
      <span class="hamburger-line" aria-hidden="true"></span>
    </button>

    <!-- Navegación desktop -->
    <nav class="header__nav" role="navigation" aria-label="Navegación principal del sitio">
      <ul role="list" class="nav-list">
        <li><a href="#hero" class="nav-link" aria-current="page">Inicio</a></li>
        <li><a href="#about" class="nav-link">Sobre Nosotros</a></li>
        <li><a href="#galeria" class="nav-link">Galería</a></li>
        <li><a href="#proceso" class="nav-link">Proceso</a></li>
        <li><a href="#cotiza" class="nav-link">Contacto</a></li>
      </ul>
    </nav>

    <!-- Navegación móvil -->
    <nav 
      class="header__nav-mobile" 
      role="navigation" 
      aria-label="Navegación móvil"
      id="mobile-navigation"
      aria-hidden="true"
    >
      <ul role="list" class="mobile-nav-list">
        <li><a href="#hero" class="mobile-nav-link" aria-current="page">Inicio</a></li>
        <li><a href="#about" class="mobile-nav-link">Sobre Nosotros</a></li>
        <li><a href="#galeria" class="mobile-nav-link">Galería</a></li>
        <li><a href="#proceso" class="mobile-nav-link">Proceso</a></li>
        <li><a href="#cotiza" class="mobile-nav-link">Contacto</a></li>
      </ul>
    </nav>
  </div>

  <script>
    // Funcionalidad del menú hamburguesa y scroll suave
    document.addEventListener('DOMContentLoaded', () => {
      const menuToggle = document.querySelector('.header__menu-toggle');
      const navMobile = document.querySelector('.header__nav-mobile');
      const body = document.body;

      // Función para scroll suave
      function smoothScrollTo(targetId: string) {
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
          const headerElement = document.querySelector('.header');
          const headerHeight =
            headerElement instanceof HTMLElement ? headerElement.offsetHeight : 0;
          const targetPosition =
            targetElement.getBoundingClientRect().top + window.pageYOffset - headerHeight;

          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth',
          });
        }
      }

      // Aplicar scroll suave a todos los enlaces de navegación
      const allNavLinks = document.querySelectorAll('.nav-link, .mobile-nav-link');
      allNavLinks.forEach(link => {
        link.addEventListener('click', e => {
          const href = link.getAttribute('href');
          if (href && href.includes('#')) {
            e.preventDefault();
            const hashIndex = href.indexOf('#');
            const hash = href.substring(hashIndex);
            smoothScrollTo(hash);
          }
          // Los enlaces sin # se comportan normalmente (navegación a otras páginas)
        });
      });

      if (menuToggle && navMobile) {
        menuToggle.addEventListener('click', () => {
          const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';

          // Toggle del estado del botón
          menuToggle.setAttribute('aria-expanded', (!isExpanded).toString());

          // Toggle de las clases para animación
          menuToggle.classList.toggle('active');
          navMobile.classList.toggle('active');
          body.classList.toggle('menu-open');
        });

        // Cerrar menú al hacer clic en un enlace
        const mobileLinks = navMobile.querySelectorAll('a');
        mobileLinks.forEach(link => {
          link.addEventListener('click', () => {
            menuToggle.classList.remove('active');
            navMobile.classList.remove('active');
            body.classList.remove('menu-open');
            menuToggle.setAttribute('aria-expanded', 'false');
          });
        });

        // Cerrar menú al hacer clic fuera
        document.addEventListener('click', e => {
          const target = e.target as Node;
          if (!menuToggle.contains(target) && !navMobile.contains(target)) {
            menuToggle.classList.remove('active');
            navMobile.classList.remove('active');
            body.classList.remove('menu-open');
            menuToggle.setAttribute('aria-expanded', 'false');
          }
        });
      }
    });
  </script>

  <style>
    .header {
      background: white;
      color: var(--color-neutral-900);
      padding: 1.5rem 0;
      position: sticky;
      top: 0;
      z-index: 10;
      border-bottom: 1px solid var(--color-neutral-200);
      box-shadow: var(--shadow-md);
    }

    .header__content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: relative;
    }

    .header__logo {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      font-family: var(--font-display);
      font-size: 1.5rem;
      font-weight: 700;
      text-decoration: none;
      color: var(--color-neutral-900);
      z-index: 12;
      transition: all var(--transition-fast);
    }

    .header__logo:hover {
      transform: translateY(-1px);
    }

    .logo-img {
      height: 42px;
      width: auto;
      border-radius: var(--border-radius-sm);
      background: white;
      padding: 4px;
      box-shadow: var(--shadow-sm);
    }

    .logo-text {
      font-weight: 600;
      letter-spacing: -0.5px;
    }

    .header__nav {
      display: flex;
      align-items: center;
    }

    .nav-list {
      display: flex;
      gap: var(--spacing-xl);
      align-items: center;
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .mobile-nav-list {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .nav-link {
      color: var(--color-neutral-700);
      font-size: 1rem;
      font-weight: 500;
      transition: all var(--transition-fast);
      text-decoration: none;
      position: relative;
      padding: var(--spacing-xs) 0;
    }

    .nav-link::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--color-primary);
      transition: width var(--transition-normal);
    }

    .nav-link:hover {
      color: var(--color-primary);
    }

    .nav-link:hover::after {
      width: 100%;
    }

    /* Botón hamburguesa simplificado */
    .header__menu-toggle {
      display: none;
      flex-direction: column;
      justify-content: space-around;
      width: 30px;
      height: 30px;
      background: transparent;
      border: none;
      cursor: pointer;
      padding: 0;
      z-index: 12;
      border-radius: var(--border-radius-sm);
      transition: all var(--transition-fast);
    }

    .header__menu-toggle:hover {
      background: rgba(0, 0, 0, 0.05);
    }

    .hamburger-line {
      width: 100%;
      height: 3px;
      background: var(--color-neutral-700);
      border-radius: 2px;
      transition: all 0.3s ease;
      transform-origin: center;
    }

    /* Animación del botón hamburguesa */
    .header__menu-toggle.active .hamburger-line:nth-child(1) {
      transform: rotate(45deg) translate(6px, 6px);
      background: var(--color-primary);
    }

    .header__menu-toggle.active .hamburger-line:nth-child(2) {
      opacity: 0;
      transform: scale(0);
    }

    .header__menu-toggle.active .hamburger-line:nth-child(3) {
      transform: rotate(-45deg) translate(6px, -6px);
      background: var(--color-primary);
    }

    /* Navegación móvil simplificada */
    .header__nav-mobile {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(41, 71, 88, 0.98);
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      z-index: 11;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
      padding: var(--spacing-xl);
    }

    .header__nav-mobile.active {
      opacity: 1;
      visibility: visible;
    }

    .mobile-nav-link {
      color: #fff;
      font-size: 1.5rem;
      font-weight: 500;
      text-decoration: none;
      transition: all var(--transition-fast);
      padding: 1rem 2rem;
      border-radius: 8px;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      display: block;
      width: 100%;
      text-align: center;
      max-width: 300px;
    }

    .mobile-nav-link:hover {
      color: var(--color-primary);
      background: rgba(255, 255, 255, 0.2);
      transform: translateY(-2px);
    }

    .mobile-nav-link:active {
      transform: scale(0.95);
    }

    /* Prevenir scroll cuando el menú está abierto */
    body.menu-open {
      overflow: hidden;
    }

    /* Scroll suave para toda la página */
    html {
      scroll-behavior: smooth;
    }

    /* Mejorar la experiencia de scroll en navegadores que no soportan scroll-behavior */
    @media (prefers-reduced-motion: no-preference) {
      html {
        scroll-behavior: smooth;
      }
    }

    /* Media queries */
    @media (max-width: 900px) {
      .header__nav {
        display: none;
      }

      .header__menu-toggle {
        display: flex;
      }

      .header__nav-mobile {
        display: flex !important;
      }

      .header__content {
        flex-direction: row;
        gap: 0;
      }
    }

    @media (min-width: 769px) {
      .header__nav-mobile {
        display: none !important;
      }
    }

    @media (max-width: 480px) {
      .logo-text {
        font-size: 1.25rem;
      }

      .logo-img {
        height: 36px;
      }

      .header__nav-mobile {
        padding: var(--spacing-lg);
      }

      .mobile-nav-link {
        font-size: 1.25rem;
        padding: var(--spacing-md) var(--spacing-lg);
      }

      .header__menu-toggle {
        width: 28px;
        height: 28px;
      }

      .hamburger-line {
        height: 3px;
      }
    }
  </style>
</header>
