---
import { Image } from 'astro:assets';
import logo from '../../assets/optimized/logo-hero.webp';
---

<header class="header">
  <div class="container header__content">
    <a href="/" class="header__logo" aria-label="IG Construcciones - Ir al inicio">
      <Image
        src={logo}
        alt="Logotipo de IG Construcciones"
        class="logo-img"
        width={42}
        height={42}
        format="webp"
        quality={90}
  loading="lazy"
  decoding="async"
  sizes="42px"
      />
      <span class="logo-text" aria-hidden="true">IG Construcciones</span>
    </a>

    <!-- Botón hamburguesa para móviles -->
    <button 
      class="header__menu-toggle" 
      aria-label="Abrir menú de navegación" 
      aria-expanded="false"
      aria-controls="mobile-navigation"
      type="button"
    >
      <span class="hamburger-line" aria-hidden="true"></span>
      <span class="hamburger-line" aria-hidden="true"></span>
      <span class="hamburger-line" aria-hidden="true"></span>
    </button>

    <!-- Navegación desktop -->
  <nav class="header__nav" aria-label="Navegación principal del sitio">
      <ul role="list" class="nav-list">
        <li><a href="#hero" class="nav-link" aria-current="page">Inicio</a></li>
        <li><a href="#about" class="nav-link">Sobre Nosotros</a></li>
        <li><a href="#galeria" class="nav-link">Galería</a></li>
        <li><a href="#proceso" class="nav-link">Proceso</a></li>
        <li><a href="#cotiza" class="nav-link">Contacto</a></li>
      </ul>
    </nav>

    <!-- Navegación móvil -->
    <nav 
      class="header__nav-mobile" 
      aria-label="Navegación móvil"
      id="mobile-navigation"
      aria-hidden="true"
    >
      <ul role="list" class="mobile-nav-list">
        <li><a href="#hero" class="mobile-nav-link" aria-current="page">Inicio</a></li>
        <li><a href="#about" class="mobile-nav-link">Sobre Nosotros</a></li>
        <li><a href="#galeria" class="mobile-nav-link">Galería</a></li>
        <li><a href="#proceso" class="mobile-nav-link">Proceso</a></li>
        <li><a href="#cotiza" class="mobile-nav-link">Contacto</a></li>
      </ul>
    </nav>
  </div>

  <!-- Lazy init: menú y scroll suave solo cuando el header entra en viewport -->
  <script>
    import('../../lib/interactions/observer').then(o => {
      const header = document.querySelector('.header');
      if (header) o.onceVisible(header, () => import('../../lib/interactions/headerMenu').then(m => m.initHeaderMenu()));
    });
  </script>

  <style>
    .header {
      background: white;
      color: var(--color-neutral-900);
      padding: 1.5rem 0;
      position: sticky;
      top: 0;
      z-index: 10;
      border-bottom: 1px solid var(--color-neutral-200);
      box-shadow: var(--shadow-md);
    }

    .header__content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: relative;
    }

    .header__logo {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
      font-family: var(--font-display);
      font-size: 1.5rem;
      font-weight: 700;
      text-decoration: none;
      color: var(--color-neutral-900);
      z-index: 12;
      transition: all var(--transition-fast);
    }

    .header__logo:hover {
      transform: translateY(-1px);
    }

    .logo-img {
      height: 42px;
      width: auto;
      border-radius: var(--border-radius-sm);
      background: white;
      padding: 4px;
      box-shadow: var(--shadow-sm);
    }

    .logo-text {
      font-weight: 600;
      letter-spacing: -0.5px;
      color: var(--color-neutral-900);
    }

    .header__nav {
      display: flex;
      align-items: center;
    }

    .nav-list {
      display: flex;
      gap: var(--spacing-xl);
      align-items: center;
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .mobile-nav-list {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .nav-link {
      color: var(--color-neutral-700);
      font-size: 1rem;
      font-weight: 500;
      transition: all var(--transition-fast);
      text-decoration: none;
      position: relative;
      padding: var(--spacing-xs) 0;
    }

    .nav-link::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--color-primary);
      transition: width var(--transition-normal);
    }

    .nav-link:hover {
      color: var(--color-primary);
    }

    .nav-link:hover::after {
      width: 100%;
    }

    /* Estilos del botón hamburguesa */
    .header__menu-toggle {
      display: none;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 32px;
      height: 32px;
      background: transparent;
      border: none;
      cursor: pointer;
      z-index: 12;
      padding: 4px;
      transition: all var(--transition-fast);
    }

    .hamburger-line {
      width: 24px;
      height: 3px;
      background: var(--color-neutral-900);
      border-radius: 2px;
      transition: all var(--transition-fast);
      margin: 2px 0;
    }

    .header__menu-toggle.active .hamburger-line:nth-child(1) {
      transform: rotate(45deg) translate(6px, 6px);
    }

    .header__menu-toggle.active .hamburger-line:nth-child(2) {
      opacity: 0;
    }
    .logo-text.active {
      color: white;
    }

    .header__menu-toggle.active .hamburger-line:nth-child(3) {
      transform: rotate(-45deg) translate(6px, -6px);
    }

    /* Estilos del menú móvil */
    .header__nav-mobile {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: white;
      opacity: 0;
      visibility: hidden;
      transition: all var(--transition-normal);
      z-index: 11;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: var(--spacing-2xl);
    }

    .header__nav-mobile.active {
      opacity: 1;
      visibility: visible;
    }

    .mobile-nav-link {
      color: var(--color-neutral-800);
      font-size: 1.5rem;
      font-weight: 500;
      text-decoration: none;
      transition: all var(--transition-fast);
      padding: 1rem 2rem;
      border-radius: 8px;
      background: rgba(119, 188, 219, 0.1);
      border: 1px solid rgba(119, 188, 219, 0.2);
      display: block;
      width: 100%;
      text-align: center;
      max-width: 300px;
    }

    .mobile-nav-link:hover {
      color: white;
      background: var(--color-primary);
      border-color: var(--color-primary);
      transform: translateY(-2px);
    }

    .mobile-nav-link:active {
      transform: scale(0.95);
    }

    /* Prevenir scroll cuando el menú está abierto */
    body.menu-open {
      overflow: hidden;
    }

    /* Scroll suave para toda la página */
    html {
      scroll-behavior: smooth;
    }

    /* Mejorar la experiencia de scroll en navegadores que no soportan scroll-behavior */
    @media (prefers-reduced-motion: no-preference) {
      html {
        scroll-behavior: smooth;
      }
    }

    /* Media queries */
    @media (max-width: 1024px) {
      .header__nav {
        display: none;
      }

      .header__menu-toggle {
        display: flex;
      }

      .header__nav-mobile {
        display: flex !important;
      }

      .header__content {
        flex-direction: row;
        gap: 0;
      }
    }

    @media (min-width: 1025px) {
      .header__nav-mobile {
        display: none !important;
      }

      .header__menu-toggle {
        display: none !important;
      }
    }

    @media (max-width: 480px) {
      .logo-text {
        font-size: 1.25rem;
      }

      .logo-img {
        height: 36px;
      }

      .header__nav-mobile {
        padding: var(--spacing-lg);
      }

      .mobile-nav-link {
        font-size: 1.25rem;
        padding: var(--spacing-md) var(--spacing-lg);
      }

      .header__menu-toggle {
        width: 28px;
        height: 28px;
      }

      .hamburger-line {
        height: 3px;
      }
    }
  </style>
</header>
