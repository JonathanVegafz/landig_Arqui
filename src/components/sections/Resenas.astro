---
import { getTestimonials } from '../../lib/testimonials-loader';

const reseñas = getTestimonials();
---

<section class="resenas section-bg-white" id="resenas" aria-label="Reseñas de Clientes">
  <div class="container">
    <div class="section-header">
      <span class="section-subtitle">Testimonios</span>
      <h2 class="section-title">Reseñas de Clientes</h2>
      <p class="section-description">
        Descubre lo que dicen nuestros clientes satisfechos sobre su experiencia trabajando con nosotros.
      </p>
    </div>

    <div class="carousel-container" role="region" aria-label="Carrusel de reseñas">
      <div class="carousel-wrapper">
        <div class="carousel-track">
          {
            reseñas.map((reseña, i) => (
              <div class="carousel-slide" id={`slide-${i}`}>
                <div class="testimonial-card">
                  <blockquote class="testimonial-quote">{reseña.descripcion}</blockquote>
                  <cite class="testimonial-author">- {reseña.nombre}</cite>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    <div class="carousel-dots" aria-label="Navegación de reseñas">
      {
        reseñas.map((_, i) => (
          <button
            class="carousel-dot"
            id={`dot-${i}`}
            aria-selected={i === 0 ? 'true' : 'false'}
            aria-label={`Ver reseña ${i + 1}`}
          />
        ))
      }
    </div>
  </div>
</section>

<style>
  .resenas {
    padding: var(--spacing-2xl) 0;
    overflow: hidden;
  }

  .carousel-container {
    margin: var(--spacing-xl) 0;
  }

  .carousel-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    width: 100%;
    max-width: 700px;
    margin: 0 auto;
    padding: 2.5rem 1rem;
  }

  .carousel-track {
    position: relative;
    width: 100%;
    min-height: 300px;
    max-width: 540px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel-slide {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 90%;
    max-width: 420px;
    min-width: 220px;
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
    transition: all 1.1s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1;
    pointer-events: none;
    box-sizing: border-box;
  }

  .carousel-slide.center {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.08);
    z-index: 3;
    pointer-events: auto;
  }

  .carousel-slide.left {
    opacity: 0.7;
    transform: translate(-200%, -50%) scale(0.9) rotateY(10deg);
    z-index: 2;
    filter: blur(2.5px) grayscale(0.2);
  }

  .carousel-slide.right {
    opacity: 0.7;
    transform: translate(100%, -50%) scale(0.9) rotateY(-10deg);
    z-index: 2;
    filter: blur(2.5px) grayscale(0.2);
  }

  .testimonial-card {
    background: #fff;
    border-radius: 16px;
    padding: 1.5rem 1.2rem 2.2rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.07);
    display: flex;
    flex-direction: column;
    height: auto;
    min-height: 200px;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
  }

  .testimonial-quote {
    font-size: 1.13rem;
    color: var(--color-neutral-700);
    line-height: 1.5;
    font-style: italic;
    margin-bottom: 0.7rem;
    flex: 1;
    border: none;
    padding: 0;
    margin: 0 0 1rem 0;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  .testimonial-author {
    font-weight: bold;
    color: var(--color-primary);
    align-self: flex-end;
    font-style: normal;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 2rem;
  }

  .carousel-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #d0d0d0;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: all 0.3s ease;
  }

  .carousel-dot.active {
    background: var(--color-primary);
    transform: scale(1.2);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .carousel-wrapper {
      padding: 1.7rem 0.5rem;
      max-width: 100%;
      width: 100%;
    }

    .carousel-track {
      width: 100%;
      max-width: 95%;
      margin: 0 auto;
    }

    .carousel-slide {
      width: 100%;
      max-width: 90%;
      min-width: auto;
    }

    .carousel-slide.left {
      transform: translate(-110%, -50%) scale(0.9) rotateY(10deg);
    }

    .carousel-slide.right {
      transform: translate(10%, -50%) scale(0.9) rotateY(-10deg);
    }

    .testimonial-card {
      padding: 1.25rem 1rem 1.75rem;
      border-radius: 12px;
      margin: 0 auto;
      max-width: 100%;
    }

    .testimonial-quote {
      font-size: 1rem;
      line-height: 1.6;
    }

    .testimonial-author {
      font-size: 0.9rem;
      white-space: normal;
      text-align: right;
    }
  }

  @media (max-width: 480px) {
    .carousel-wrapper {
      padding: 1.5rem 0.25rem;
    }

    .carousel-track {
      max-width: 100%;
      min-height: 250px;
    }

    .carousel-slide {
      width: 95%;
      max-width: 95%;
    }

    .testimonial-card {
      padding: 1rem 0.875rem 1.5rem;
      min-height: 180px;
    }

    .testimonial-quote {
      font-size: 0.95rem;
      line-height: 1.5;
    }

    .testimonial-author {
      font-size: 0.85rem;
    }

    .carousel-dots {
      margin-top: 2.5rem;
    }

    .carousel-dot {
      width: 10px;
      height: 10px;
    }
  }
</style>

<script is:inline>
  const reseñas = [
    {
      nombre: 'María López',
      descripcion:
        'Excelente servicio y atención personalizada. Desde el primer contacto, el equipo mostró una gran disposición para entender mis necesidades y plasmar mis ideas en el proyecto. El resultado final superó mis expectativas y sin duda volvería a contratarlos para futuros trabajos. Muy recomendados.',
    },
    {
      nombre: 'Carlos Pérez',
      descripcion:
        'El proyecto se entregó a tiempo y con una calidad excepcional. Me mantuvieron informado durante todo el proceso y resolvieron cada una de mis dudas con paciencia y profesionalismo. La atención al detalle fue evidente en cada etapa. ¡Gracias por su dedicación!',
    },
    {
      nombre: 'Ana Torres',
      descripcion:
        'Profesionales y atentos a cada detalle. Me sorprendió gratamente la creatividad de las soluciones propuestas y la eficiencia con la que ejecutaron la obra. El acompañamiento fue constante y siempre estuvieron abiertos a sugerencias y cambios.',
    },
    {
      nombre: 'Javier Ramírez',
      descripcion:
        'Contratar a este equipo fue la mejor decisión para mi remodelación. Cumplieron con los plazos, el presupuesto y la calidad prometida. Además, el trato humano y la comunicación fueron excelentes, lo que hizo todo el proceso mucho más sencillo y agradable.',
    },
    {
      nombre: 'Lucía Fernández',
      descripcion:
        'Estoy muy satisfecha con el trabajo realizado. Desde la planificación hasta la entrega final, demostraron compromiso, responsabilidad y pasión por lo que hacen. El resultado fue un espacio funcional, moderno y acogedor que superó mis expectativas.',
    },
  ];

  let indice = 0;
  let timeoutId;

  function actualizarSlides() {
    const slides = document.querySelectorAll('.carousel-slide');
    const dots = document.querySelectorAll('.carousel-dot');
    
    slides.forEach((slide, i) => {
      slide.classList.remove('left', 'center', 'right');
      if (i === indice) {
        slide.classList.add('center');
      } else if (i === (indice - 1 + reseñas.length) % reseñas.length) {
        slide.classList.add('left');
      } else if (i === (indice + 1) % reseñas.length) {
        slide.classList.add('right');
      }
    });

    dots.forEach((dot, i) => {
      dot.classList.toggle('active', i === indice);
      dot.setAttribute('aria-selected', i === indice ? 'true' : 'false');
    });
  }

  function cambiarResena(dir) {
    indice = (indice + dir + reseñas.length) % reseñas.length;
    actualizarSlides();
    reiniciarAuto();
  }

  function autoAvance() {
    timeoutId = setTimeout(() => {
      cambiarResena(1);
      autoAvance();
    }, 12000);
  }

  function reiniciarAuto() {
    clearTimeout(timeoutId);
    autoAvance();
  }

  window.addEventListener('DOMContentLoaded', () => {
    actualizarSlides();
    autoAvance();
    
    // Click en viñetas
    document.querySelectorAll('.carousel-dot').forEach((dot, i) => {
      dot.addEventListener('click', () => {
        indice = i;
        actualizarSlides();
        reiniciarAuto();
      });
    });
  });
</script>
