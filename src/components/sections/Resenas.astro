---
import { getTestimonials } from '../../lib/testimonials-loader';

const reseñas = getTestimonials();
---
<section class="resenas section-bg-gray" id="resenas" aria-label="Reseñas de Clientes">
  <h2>Reseñas de Clientes</h2>
  <div class="carrusel-slider-outer container">
    <div class="carrusel-slider container" role="region" aria-label="Carrusel de reseñas">
      {reseñas.map((reseña, i) => (
        <div class="carrusel-slide" id={`slide-${i}`}
          style={`left: 50%`}>
          <blockquote class="descripcion">{reseña.descripcion}</blockquote>
          <cite class="nombre">- {reseña.nombre}</cite>
        </div>
      ))}
    </div>
  </div>
  <nav class="carrusel-dots" role="tablist" aria-label="Navegación de reseñas">
    {reseñas.map((_, i) => (
      <button class="dot" id={`dot-${i}`} role="tab" aria-selected={i === 0 ? "true" : "false"} aria-label={`Ver reseña ${i + 1}`}></button>
    ))}
  </nav>
</section>
<style>
.resenas {
  overflow: hidden;
  padding: 3rem 0;
}

h2 {
  text-align: center;
  color: var(--color-primary);
  margin-bottom: 2.5rem;
  font-size: 2rem;
  position: relative;
  z-index: 2;
}
.carrusel-slider-outer {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  width: 100%;
  max-width: 700px;
  box-sizing: border-box;
  padding: 2.5rem 1rem;
  position: relative;
}
.carrusel-slider {
  position: relative;
  width: 100%;
  min-height: 180px;
  max-width: 540px;
  height: auto;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: visible;
  max-width: 100vw;
}
.carrusel-slide {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 90%;
  max-width: 420px;
  min-width: 220px;
  height: auto;
  padding: 1.5rem 1.2rem 2.2rem 1.2rem;
  box-sizing: border-box;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.07);
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
  opacity: 0;
  transform: translate(-50%, -50%) scale(0.8);
  transition: all 1.1s cubic-bezier(.4,0,.2,1);
  z-index: 1;
  pointer-events: none;
  filter: none;
  overflow: hidden;
}
.carrusel-slide.center {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1.08);
  z-index: 3;
  pointer-events: auto;
  filter: none;
}
.carrusel-slide.left {
  opacity: 0.7;
  transform: translate(-200%, -50%) scale(0.9) rotateY(10deg);
  z-index: 2;
  filter: blur(2.5px) grayscale(0.2);
}
.carrusel-slide.right {
  opacity: 0.7;
  transform: translate(100%, -50%) scale(0.9) rotateY(-10deg);
  z-index: 2;
  filter: blur(2.5px) grayscale(0.2);
}
.descripcion {
  font-size: 1.13rem;
  color: var(--color-text);
  flex: 1 1 auto;
  white-space: pre-line;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 0.7rem;
  max-width: 100%;
  line-height: 1.5;
  font-style: italic;
  border: none;
  padding: 0;
}
.nombre {
  font-weight: bold;
  color: var(--color-primary);
  align-self: flex-end;
  margin: 0;
  white-space: nowrap;
  font-style: normal;
}
.carrusel-dots {
  display: flex;
  justify-content: center;
  padding: 4rem 0 0 0;
  gap: 0.5rem;
  margin: 1rem 0 0 0;
}
.dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: #d0d0d0;
  display: inline-block;
  transition: background 0.3s, transform 0.3s;
  border: none;
  cursor: pointer;
  padding: 0;
}
.dot.active {
  background: var(--color-primary);
  transform: scale(1.2);
}
@media (max-width: 700px) {
  h2 {
    margin-bottom: 3rem;
  }
  .carrusel-slider-outer {
    padding: 1.7rem 0.5rem;
    margin: 2rem auto 2rem auto;
    max-width: 100vw;
    width: 100vw;
    box-sizing: border-box;
  }
  .carrusel-slider {
    width: 100vw;
    min-width: 0;
    max-width: 80%;
    height: auto;
    box-sizing: border-box;
  }
  .carrusel-slide {
    width: 96vw;
    min-width: 0;
    max-width: 80%;
    height: auto;
    padding: 1rem 0.7rem 1.5rem 0.7rem;
    border-radius: 12px;
    box-sizing: border-box;
  }
  .carrusel-slide.left {
    transform: translate(-110%, -50%) scale(0.9) rotateY(10deg);
  }
  .carrusel-slide.right {
    transform: translate(10%, -50%) scale(0.9) rotateY(-10deg);
    max-width: 96vw;
  }
}
@media (max-width: 480px) {
  h2 {
    margin-bottom: 6rem;
  }
}
@media (max-width: 360px) {
  h2 {
    margin-bottom: 8rem;
  }
  .carrusel-dots {
    padding: 6rem 0 0 0;
  }
}
</style>

<script is:inline>
// Los datos de reseñas se cargan desde el JSON en el servidor
// Aquí solo necesitamos la cantidad para el carrusel
const reseñas = [
  { nombre: 'María López', descripcion: 'Excelente servicio y atención personalizada. Desde el primer contacto, el equipo mostró una gran disposición para entender mis necesidades y plasmar mis ideas en el proyecto. El resultado final superó mis expectativas y sin duda volvería a contratarlos para futuros trabajos. Muy recomendados.' },
  { nombre: 'Carlos Pérez', descripcion: 'El proyecto se entregó a tiempo y con una calidad excepcional. Me mantuvieron informado durante todo el proceso y resolvieron cada una de mis dudas con paciencia y profesionalismo. La atención al detalle fue evidente en cada etapa. ¡Gracias por su dedicación!' },
  { nombre: 'Ana Torres', descripcion: 'Profesionales y atentos a cada detalle. Me sorprendió gratamente la creatividad de las soluciones propuestas y la eficiencia con la que ejecutaron la obra. El acompañamiento fue constante y siempre estuvieron abiertos a sugerencias y cambios.' },
  { nombre: 'Javier Ramírez', descripcion: 'Contratar a este equipo fue la mejor decisión para mi remodelación. Cumplieron con los plazos, el presupuesto y la calidad prometida. Además, el trato humano y la comunicación fueron excelentes, lo que hizo todo el proceso mucho más sencillo y agradable.' },
  { nombre: 'Lucía Fernández', descripcion: 'Estoy muy satisfecha con el trabajo realizado. Desde la planificación hasta la entrega final, demostraron compromiso, responsabilidad y pasión por lo que hacen. El resultado fue un espacio funcional, moderno y acogedor que superó mis expectativas.' },
];
let indice = 0;
let timeoutId;

function actualizarSlides() {
  const slides = document.querySelectorAll('.carrusel-slide');
  const dots = document.querySelectorAll('.dot');
  slides.forEach((slide, i) => {
    slide.classList.remove('left', 'center', 'right');
    if (i === indice) {
      slide.classList.add('center');
    } else if (i === (indice - 1 + reseñas.length) % reseñas.length) {
      slide.classList.add('left');
    } else if (i === (indice + 1) % reseñas.length) {
      slide.classList.add('right');
    }
  });
  dots.forEach((dot, i) => {
    dot.classList.toggle('active', i === indice);
    dot.setAttribute('aria-selected', i === indice ? 'true' : 'false');
  });
}

function cambiarResena(dir) {
  indice = (indice + dir + reseñas.length) % reseñas.length;
  actualizarSlides();
  reiniciarAuto();
}

function autoAvance() {
  timeoutId = setTimeout(() => {
    cambiarResena(1);
    autoAvance();
  }, 4000);
}

function reiniciarAuto() {
  clearTimeout(timeoutId);
  autoAvance();
}

window.addEventListener('DOMContentLoaded', () => {
  actualizarSlides();
  autoAvance();
  // Click en viñetas
  document.querySelectorAll('.dot').forEach((dot, i) => {
    dot.addEventListener('click', () => {
      indice = i;
      actualizarSlides();
      reiniciarAuto();
    });
  });
});
</script>