---
import { getTestimonials } from '../../lib/testimonials-loader';
const reseñas = await getTestimonials();
---

<section class="resenas section-bg-white" id="resenas" aria-label="Reseñas de Clientes">
  <div class="container">
    <div class="section-header">
      <span class="section-subtitle">Testimonios</span>
      <h2 class="section-title">Reseñas de Clientes</h2>
      <p class="section-description">
        Descubre lo que dicen nuestros clientes satisfechos sobre su experiencia trabajando con nosotros.
      </p>
    </div>

    <div class="carousel-container" role="region" aria-label="Carrusel de reseñas" aria-roledescription="carousel">
      <div class="carousel-wrapper">
        <div class="visually-hidden" aria-live="polite" id="carousel-status"></div>
        <button class="carousel-control prev" type="button" aria-label="Reseña anterior" data-carousel-prev>&larr;</button>
        <div class="carousel-track" role="group" aria-label="Lista de reseñas" aria-atomic="false">
          {
            reseñas.map((reseña, i) => (
              <div class="carousel-slide" id={`slide-${i}`} role="group" aria-roledescription="slide" aria-label={`Reseña ${i+1} de ${reseñas.length}`}>        
                <div class="testimonial-card">
                  <blockquote class="testimonial-quote">{reseña.descripcion}</blockquote>
                  <cite class="testimonial-author">- {reseña.nombre}</cite>
                </div>
              </div>
            ))
          }
        </div>
        <button class="carousel-control next" type="button" aria-label="Siguiente reseña" data-carousel-next>&rarr;</button>
      </div>
    </div>

    <div class="carousel-dots" aria-label="Navegación de reseñas">
      {
        reseñas.map((_, i) => (
          <button
            class="carousel-dot"
            id={`dot-${i}`}
            aria-selected={i === 0 ? 'true' : 'false'}
            aria-label={`Ver reseña ${i + 1}`}
          />
        ))
      }
    </div>
  </div>
</section>

<style>
  .resenas {
    padding: var(--spacing-2xl) 0;
    overflow: hidden;
  }

  .carousel-container {
    margin: var(--spacing-xl) 0;
  }

  .carousel-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    width: 100%;
    max-width: 700px;
    margin: 0 auto;
    padding: 2.5rem 1rem;
  }

  .carousel-control {
    background: rgba(0,0,0,0.4);
    color: #fff;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    transition: background .3s;
  }
  .carousel-control:hover { background: rgba(0,0,0,0.55); }
  .carousel-control.prev { left: -4px; }
  .carousel-control.next { right: -4px; }

  .carousel-track {
    position: relative;
    width: 100%;
    min-height: 300px;
    max-width: 540px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel-slide {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 90%;
    max-width: 420px;
    min-width: 220px;
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
    transition: all 1.1s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1;
    pointer-events: none;
    box-sizing: border-box;
  }

  .carousel-slide.center {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.08);
    z-index: 3;
    pointer-events: auto;
  }

  .carousel-slide.left {
    opacity: 0.7;
    transform: translate(-200%, -50%) scale(0.9) rotateY(10deg);
    z-index: 2;
    filter: blur(2.5px) grayscale(0.2);
  }

  .carousel-slide.right {
    opacity: 0.7;
    transform: translate(100%, -50%) scale(0.9) rotateY(-10deg);
    z-index: 2;
    filter: blur(2.5px) grayscale(0.2);
  }

  .testimonial-card {
    background: #fff;
    border-radius: 16px;
    padding: 1.5rem 1.2rem 2.2rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.07);
    display: flex;
    flex-direction: column;
    height: auto;
    min-height: 200px;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
  }

  .testimonial-quote {
    font-size: 1.13rem;
    color: var(--color-neutral-700);
    line-height: 1.5;
    font-style: italic;
    margin-bottom: 0.7rem;
    flex: 1;
    border: none;
    padding: 0;
    margin: 0 0 1rem 0;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  .testimonial-author {
    font-weight: bold;
    color: var(--color-primary);
    align-self: flex-end;
    font-style: normal;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 2rem;
  }

  .carousel-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #d0d0d0;
    border: none;
    cursor: pointer;
    padding: 0;
    transition: all 0.3s ease;
  }

  .carousel-dot.active {
    background: var(--color-primary);
    transform: scale(1.2);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .carousel-wrapper {
      padding: 1.7rem 0.5rem;
      max-width: 100%;
      width: 100%;
    }

    .carousel-track {
      width: 100%;
      max-width: 95%;
      margin: 0 auto;
    }

    .carousel-slide {
      width: 100%;
      max-width: 90%;
      min-width: auto;
    }

    .carousel-slide.left {
      transform: translate(-110%, -50%) scale(0.9) rotateY(10deg);
    }

    .carousel-slide.right {
      transform: translate(10%, -50%) scale(0.9) rotateY(-10deg);
    }

    .testimonial-card {
      padding: 1.25rem 1rem 1.75rem;
      border-radius: 12px;
      margin: 0 auto;
      max-width: 100%;
    }

    .testimonial-quote {
      font-size: 1rem;
      line-height: 1.6;
    }

    .testimonial-author {
      font-size: 0.9rem;
      white-space: normal;
      text-align: right;
    }
  }

  @media (max-width: 480px) {
    .carousel-wrapper {
      padding: 1.5rem 0.25rem;
    }

    .carousel-track {
      max-width: 100%;
      min-height: 250px;
    }

    .carousel-slide {
      width: 95%;
      max-width: 95%;
    }

    .testimonial-card {
      padding: 1rem 0.875rem 1.5rem;
      min-height: 180px;
    }

    .testimonial-quote {
      font-size: 0.95rem;
      line-height: 1.5;
    }

    .testimonial-author {
      font-size: 0.85rem;
    }

    .carousel-dots {
      margin-top: 2.5rem;
    }

    .carousel-dot {
      width: 10px;
      height: 10px;
    }
  }
</style>

<script>
  import('../../lib/interactions/observer').then(o => {
    const section = document.getElementById('resenas');
    if (section) o.onceVisible(section, () => import('../../lib/interactions/testimonialsCarousel').then(m => m.initTestimonialsCarousel()));
  });
</script>
