---
import SectionHeader from '../ui/SectionHeader.astro';
import ContactInfo from '../ui/ContactInfo.astro';
// Componente Cotiza (Contacto y Cierre) para IG Construcciones
---

<section class="cotiza section-bg-white" id="cotiza" aria-label="Cotiza tu Proyecto">
  <div class="container">
    <SectionHeader 
      subtitle="Contacto"
      title="¿Listo para Construir tu Sueño?"
      description="Cuéntanos sobre tu proyecto. Ya sea una idea inicial o un plan definido, estamos aquí para ayudarte a dar el siguiente paso. Ofrecemos proyectos desde 28 UF por m², adaptándonos a la materialidad y terminaciones que necesites."
    />
    
    <div class="cotiza__content">
      <div class="cotiza__info glassmorphism">
        <ContactInfo 
          icon='<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>'
          title="Teléfono"
          content="+56 9 4515 0212"
          link="https://wa.me/56945150212"
          ariaLabel="Contactar por WhatsApp"
        />
        
        <ContactInfo 
          icon='<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>'
          title="Ubicación"
          content="Maitencillo, V Región, Chile"
        />
        
        <ContactInfo 
          icon='<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>'
          title="Email"
          content="contacto@igconstrucciones.cl"
          link="mailto:contacto@igconstrucciones.cl"
          ariaLabel="Enviar email"
        />
      </div>
      
      <form class="cotiza__form glassmorphism" method="POST" action="#" aria-label="Formulario de contacto" id="contactForm">
        <div class="form-header">
          <h3 class="form-title">Envíanos tu Proyecto</h3>
          <p class="form-subtitle">Completa el formulario y nos pondremos en contacto contigo</p>
        </div>
        
        <div class="form-fields">
          <div class="form-group">
            <label for="nombre" class="form-label">Nombre *</label>
            <div class="input-wrapper">
              <input type="text" id="nombre" name="nombre" required class="form-input" placeholder="Tu nombre completo" />
              <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                <circle cx="12" cy="7" r="4"/>
              </svg>
            </div>
            <span class="error-message" id="nombre-error"></span>
          </div>
          
          <div class="form-group">
            <label for="email" class="form-label">Email *</label>
            <div class="input-wrapper">
              <input type="email" id="email" name="email" required class="form-input" placeholder="tu@email.com" />
              <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <span class="error-message" id="email-error"></span>
          </div>
          
          <div class="form-group">
            <label for="telefono" class="form-label">Teléfono *</label>
            <div class="input-wrapper">
              <input type="tel" id="telefono" name="telefono" required class="form-input" placeholder="+56 9 1234 5678" />
              <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <span class="error-message" id="telefono-error"></span>
          </div>
          
          <div class="form-group">
            <label for="mensaje" class="form-label">Mensaje * (mínimo 5 palabras)</label>
            <div class="input-wrapper">
              <textarea id="mensaje" name="mensaje" rows="5" required class="form-input" placeholder="¿En qué tipo de proyecto estás pensando? Cuéntanos más detalles..."></textarea>
              <svg class="input-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
              </svg>
            </div>
            <span class="error-message" id="mensaje-error"></span>
          </div>
          
          <button type="submit" class="submit-btn">
            <span>Enviar Solicitud</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
      </form>
    </div>
  </div>
  
  <div class="success-message" id="success-message">
    <div class="success-content">
      <svg class="success-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 12l2 2 4-4"/>
        <path d="M21 12c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9 9 4.03 9 9z"/>
      </svg>
      <p>¡Formulario enviado correctamente! Nos pondremos en contacto contigo pronto.</p>
    </div>
  </div>
  
  <style>
    .cotiza {
      padding: var(--spacing-2xl) 0;
      position: relative;
    }
    
    .cotiza__header {
      text-align: center;
      max-width: 700px;
      margin: 0 auto var(--spacing-xl) auto;
      position: relative;
      z-index: 2;
    }
    
    .cotiza__subtitle {
      display: inline-block;
      color: var(--color-primary);
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: var(--spacing-sm);
      background: rgba(119, 188, 219, 0.1);
      padding: 0.5rem 1rem;
      border-radius: var(--border-radius-sm);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(119, 188, 219, 0.2);
    }
    
    .cotiza__title {
      font-family: var(--font-display);
      font-size: clamp(2rem, 5vw, 3rem);
      font-weight: 700;
      color: var(--color-neutral-900);
      margin-bottom: var(--spacing-md);
    }
    
    .cotiza__description {
      font-size: 1.25rem;
      line-height: 1.6;
      color: var(--color-neutral-600);
      margin: 0;
    }
    
    .cotiza__content {
      display: grid;
      grid-template-columns: 1fr 1.5fr;
      gap: var(--spacing-xl);
      max-width: 1000px;
      margin: 0 auto;
      position: relative;
      z-index: 2;
    }
    
    .cotiza__info {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-lg);
      padding: var(--spacing-xl);
      border-radius: var(--border-radius-xl);
      position: relative;
      z-index: 2;
    }
    
    .info-item {
      display: flex;
      align-items: center;
      gap: var(--spacing-md);
      padding: var(--spacing-md);
      border-radius: var(--border-radius-lg);
      transition: all var(--transition-normal);
    }
    
    .info-item:hover {
      background: rgba(119, 188, 219, 0.1);
      transform: translateX(8px);
    }
    
    .info-item__icon {
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
      border-radius: var(--border-radius-lg);
      color: white;
      transition: all var(--transition-normal);
      flex-shrink: 0;
    }
    
    .info-item:hover .info-item__icon {
      transform: scale(1.1) rotate(5deg);
      box-shadow: 0 8px 24px rgba(119, 188, 219, 0.4);
    }
    
    .info-item__content {
      flex: 1;
    }
    
    .info-item__title {
      font-family: var(--font-display);
      font-size: 1.125rem;
      font-weight: 600;
      color: var(--color-neutral-900);
      margin-bottom: var(--spacing-xs);
    }
    
    .info-item__text,
    .info-item__link {
      font-size: 1rem;
      color: var(--color-neutral-700);
      text-decoration: none;
      transition: color var(--transition-fast);
    }
    
    .info-item__link:hover {
      color: var(--color-primary);
    }
    
    .cotiza__form {
      position: relative;
      border-radius: var(--border-radius-xl);
      padding: var(--spacing-xl);
      transition: all var(--transition-normal);
      overflow: hidden;
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      background: rgba(255, 255, 255, 0.1);
      box-shadow: 
        0 8px 32px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }
    
    .cotiza__form::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: linear-gradient(90deg, var(--color-primary) 0%, var(--color-secondary) 100%);
      transform: scaleX(0);
      transition: transform var(--transition-normal);
    }
    
    .cotiza__form:hover::before {
      transform: scaleX(1);
    }
    
    .form-header {
      text-align: center;
      margin-bottom: var(--spacing-xl);
    }
    
    .form-title {
      font-family: var(--font-display);
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--color-neutral-900);
      margin-bottom: var(--spacing-sm);
    }
    
    .form-subtitle {
      font-size: 1rem;
      color: var(--color-neutral-600);
      margin: 0;
    }
    
    .form-fields {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-lg);
    }
    
    .form-group {
      position: relative;
    }
    
    .form-label {
      display: block;
      font-weight: 500;
      margin-bottom: var(--spacing-xs);
      color: var(--color-neutral-800);
      font-size: 0.875rem;
    }
    
    .input-wrapper {
      position: relative;
    }
    
    .form-input {
      width: 100%;
      padding: var(--spacing-md) var(--spacing-lg) var(--spacing-md) 3rem;
      border: 2px solid var(--color-primary);
      border-radius: var(--border-radius-lg);
      font-size: 1rem;
      font-family: inherit;
      background: rgba(255, 255, 255, 0.1);
      color: var(--color-neutral-900);
      transition: all var(--transition-normal);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
    }
    
    .form-input::placeholder {
      color: var(--color-neutral-500);
    }
    
    .form-input:focus {
      outline: none;
      border-color: var(--color-primary);
      box-shadow: 0 0 0 3px rgba(119, 188, 219, 0.2);
      background: rgba(255, 255, 255, 0.2);
    }
    
    .form-input.error {
      border-color: var(--color-error);
      box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.1);
    }
    
    /* Estilos específicos para textarea */
    textarea.form-input {
      resize: vertical;
      min-height: 120px;
      font-family: inherit;
      line-height: 1.5;
    }
    
    .input-icon {
      position: absolute;
      left: var(--spacing-md);
      top: 50%;
      transform: translateY(-50%);
      color: var(--color-neutral-500);
      transition: color var(--transition-fast);
    }
    
    .form-input:focus + .input-icon {
      color: var(--color-primary);
    }
    
    .error-message {
      color: var(--color-error);
      font-size: 0.75rem;
      margin-top: var(--spacing-xs);
      min-height: 1rem;
      display: block;
    }
    
    .submit-btn {
      background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
      color: white;
      border: none;
      padding: var(--spacing-md) var(--spacing-xl);
      border-radius: var(--border-radius-lg);
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all var(--transition-normal);
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--spacing-xs);
      box-shadow: 0 4px 16px rgba(119, 188, 219, 0.3);
      margin-top: var(--spacing-md);
    }
    
    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(119, 188, 219, 0.4);
    }
    
    .submit-btn:active {
      transform: translateY(0);
    }
    
    .success-message {
      position: fixed;
      top: 20px;
      right: 20px;
      background: linear-gradient(135deg, var(--color-success) 0%, #2ecc71 100%);
      color: white;
      padding: var(--spacing-lg);
      border-radius: var(--border-radius-lg);
      box-shadow: 0 8px 32px rgba(39, 174, 96, 0.3);
      z-index: 1000;
      transform: translateX(400px);
      opacity: 0;
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      max-width: 350px;
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
    }
    
    .success-message.show {
      transform: translateX(0);
      opacity: 1;
    }
    
    .success-content {
      display: flex;
      align-items: center;
      gap: var(--spacing-sm);
    }
    
    .success-icon {
      flex-shrink: 0;
      color: white;
    }
    
    .success-message p {
      margin: 0;
      font-size: 0.9rem;
      line-height: 1.4;
    }
    
    /* Responsive mejorado */
    @media (max-width: 1024px) {
      .cotiza__content {
        grid-template-columns: 1fr;
        gap: var(--spacing-xl);
      }
      
      .cotiza__info {
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
      }
      
      .info-item {
        flex: 1;
        min-width: 250px;
      }
    }
    
    @media (max-width: 900px) {
      .cotiza {
        padding: var(--spacing-2xl) 0;
      }
      
      .cotiza__content {
        gap: var(--spacing-lg);
      }
      
      .cotiza__info {
        flex-direction: column;
      }
      
      .info-item {
        min-width: auto;
      }
      
      .cotiza__form {
        padding: var(--spacing-lg);
      }
      
      .cotiza__description {
        font-size: 1.125rem;
      }
    }
    
    @media (max-width: 600px) {
      .cotiza {
        padding: var(--spacing-xl) 0;
      }
      
      .cotiza__header {
        margin-bottom: var(--spacing-xl);
      }
      
      .cotiza__form {
        padding: var(--spacing-md);
      }
      
      .form-title {
        font-size: 1.25rem;
      }
      
      .form-subtitle {
        font-size: 0.9rem;
      }
      
      .cotiza__title {
        font-size: clamp(1.5rem, 4vw, 2rem);
      }
      
      .cotiza__description {
        font-size: 1rem;
      }
      
      .info-item {
        padding: var(--spacing-md);
      }
      
      .info-item__icon {
        width: 40px;
        height: 40px;
      }
      
      .info-item__title {
        font-size: 1rem;
      }
      
      .info-item__text,
      .info-item__link {
        font-size: 0.9rem;
      }
    }
    
    @media (max-width: 480px) {
      .cotiza {
        padding: var(--spacing-lg) 0;
      }
      
      .cotiza__content {
        gap: var(--spacing-sm);
      }
      
      .cotiza__form {
        padding: var(--spacing-sm);
        margin: 0 var(--spacing-xs);
      }
      
      .form-input {
        padding: 0.75rem 0.5rem 0.75rem 2rem;
        font-size: 0.875rem;
      }
      
      .input-icon {
        left: 0.5rem;
        width: 14px;
        height: 14px;
      }
      
      .submit-btn {
        padding: 0.75rem 1rem;
        font-size: 0.875rem;
      }
      
      .success-message {
        max-width: 280px;
        padding: var(--spacing-sm);
        right: 10px;
        top: 10px;
      }
      
      .success-message p {
        font-size: 0.75rem;
      }
      
      .form-title {
        font-size: 1.125rem;
      }
      
      .form-subtitle {
        font-size: 0.8rem;
      }
      
      .form-label {
        font-size: 0.8rem;
      }
      
      .error-message {
        font-size: 0.7rem;
      }
    }
    
    @media (max-width: 360px) {
      .cotiza {
        padding: var(--spacing-md) 0;
      }
      
      .cotiza__form {
        padding: 0.5rem;
        margin: 0;
      }
      
      .form-input {
        padding: 0.5rem 0.25rem 0.5rem 1.75rem;
        font-size: 0.8rem;
      }
      
      .input-icon {
        left: 0.25rem;
        width: 12px;
        height: 12px;
      }
      
      .submit-btn {
        padding: 0.5rem 0.75rem;
        font-size: 0.8rem;
      }
      
      .form-title {
        font-size: 1rem;
      }
      
      .form-subtitle {
        font-size: 0.75rem;
      }
      
      .form-label {
        font-size: 0.75rem;
      }
      
      .error-message {
        font-size: 0.65rem;
      }
    }
    
    @media (max-width: 320px) {
      .cotiza {
        padding: var(--spacing-sm) 0;
      }
      
      .cotiza__content {
        gap: var(--spacing-sm);
      }
      
      .cotiza__form {
        padding: 0.25rem;
        margin: 0;
        border-radius: var(--border-radius-md);
      }
      
      .form-input {
        padding: 0.375rem 0.125rem 0.375rem 1.5rem;
        font-size: 0.75rem;
        border-width: 1px;
      }
      
      .input-icon {
        left: 0.125rem;
        width: 10px;
        height: 10px;
      }
      
      .submit-btn {
        padding: 0.375rem 0.5rem;
        font-size: 0.75rem;
        margin-top: var(--spacing-sm);
      }
      
      .form-title {
        font-size: 0.875rem;
        margin-bottom: var(--spacing-xs);
      }
      
      .form-subtitle {
        font-size: 0.7rem;
      }
      
      .form-label {
        font-size: 0.7rem;
        margin-bottom: 0.25rem;
      }
      
      .error-message {
        font-size: 0.6rem;
        margin-top: 0.25rem;
      }
      
      .form-fields {
        gap: var(--spacing-sm);
      }
      
      .form-group {
        margin-bottom: 0;
      }
      
      /* Ajustar textarea para dispositivos muy pequeños */
      textarea.form-input {
        min-height: 80px;
        resize: vertical;
      }
      
      /* Ajustar el header del formulario */
      .form-header {
        margin-bottom: var(--spacing-sm);
      }
      
      /* Ajustar el contenedor principal */
      .container {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
      }
    }
  </style>
</section>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm');
    const nombreInput = document.getElementById('nombre');
    const emailInput = document.getElementById('email');
    const telefonoInput = document.getElementById('telefono');
    const mensajeInput = document.getElementById('mensaje');
    
    const nombreError = document.getElementById('nombre-error');
    const emailError = document.getElementById('email-error');
    const telefonoError = document.getElementById('telefono-error');
    const mensajeError = document.getElementById('mensaje-error');

    // Función para limpiar errores
    function clearError(input, errorElement) {
      input.classList.remove('error');
      errorElement.textContent = '';
    }

    // Función para mostrar error
    function showError(input, errorElement, message) {
      input.classList.add('error');
      errorElement.textContent = message;
    }

    // Validación de nombre en tiempo real
    function validateNombre() {
      const value = nombreInput.value.trim();
      if (!value) {
        showError(nombreInput, nombreError, 'El nombre es obligatorio');
        return false;
      } else if (value.length < 2) {
        showError(nombreInput, nombreError, 'El nombre debe tener al menos 2 caracteres');
        return false;
      } else {
        clearError(nombreInput, nombreError);
        return true;
      }
    }

    // Validación de email en tiempo real
    function validateEmail() {
      const value = emailInput.value.trim();
      if (!value) {
        showError(emailInput, emailError, 'El email es obligatorio');
        return false;
      } else if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(value)) {
        showError(emailInput, emailError, 'Ingresa un email válido');
        return false;
      } else {
        clearError(emailInput, emailError);
        return true;
      }
    }

    // Validación de teléfono en tiempo real
    function validateTelefono() {
      const value = telefonoInput.value.trim();
      if (!value) {
        showError(telefonoInput, telefonoError, 'El teléfono es obligatorio');
        return false;
      } else if (value.length < 8) {
        showError(telefonoInput, telefonoError, 'El teléfono debe tener al menos 8 dígitos');
        return false;
      } else {
        clearError(telefonoInput, telefonoError);
        return true;
      }
    }

    // Validación de mensaje en tiempo real
    function validateMensaje() {
      const value = mensajeInput.value.trim();
      if (!value) {
        showError(mensajeInput, mensajeError, 'El mensaje es obligatorio');
        return false;
      } else {
        const palabras = value.split(/\s+/).filter(palabra => palabra.length > 0);
        if (palabras.length < 5) {
          showError(mensajeInput, mensajeError, `El mensaje debe tener al menos 5 palabras (actual: ${palabras.length})`);
          return false;
        } else {
          clearError(mensajeInput, mensajeError);
          return true;
        }
      }
    }

    // Event listeners para validación en tiempo real
    nombreInput.addEventListener('input', validateNombre);
    nombreInput.addEventListener('blur', validateNombre);
    
    emailInput.addEventListener('input', validateEmail);
    emailInput.addEventListener('blur', validateEmail);
    
    telefonoInput.addEventListener('input', validateTelefono);
    telefonoInput.addEventListener('blur', validateTelefono);
    
    mensajeInput.addEventListener('input', validateMensaje);
    mensajeInput.addEventListener('blur', validateMensaje);

    // Validación del formulario al enviar
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const isNombreValid = validateNombre();
      const isEmailValid = validateEmail();
      const isTelefonoValid = validateTelefono();
      const isMensajeValid = validateMensaje();

      if (isNombreValid && isEmailValid && isTelefonoValid && isMensajeValid) {
        // Aquí puedes agregar la lógica para enviar el formulario
        const successMessage = document.getElementById('success-message');
        successMessage.classList.add('show');
        
        // Ocultar el mensaje después de 4 segundos
        setTimeout(() => {
          successMessage.classList.remove('show');
        }, 4000);
        
        form.reset();
        
        // Limpiar todos los errores después del reset
        [nombreInput, emailInput, telefonoInput, mensajeInput].forEach(input => {
          input.classList.remove('error');
        });
        [nombreError, emailError, telefonoError, mensajeError].forEach(error => {
          error.textContent = '';
        });
      }
    });
  });
</script>