---
import SectionHeader from '../ui/SectionHeader.astro';
import ServiceCard from '../ui/ServiceCard.astro';
import { SERVICES } from '../../lib/constants-loader';
import type { ServiceProps } from '../../types';
---

<section class="servicios section-bg-gray" id="servicios" aria-labelledby="servicios-title">
  <div class="container">
    <SectionHeader
      subtitle="Nuestros Servicios"
      title="Soluciones Integrales para tu Hogar"
      description="Ofrecemos servicios especializados que combinan innovaciÃ³n, calidad y eficiencia para crear espacios que trascienden el tiempo."
    />

    <div class="servicios__grid grid-auto-fit" role="list" aria-label="Lista de servicios especializados">
      {
        SERVICES.map((servicio) => (
          <div role="listitem">
            <ServiceCard title={servicio.title} features={servicio.features} />
          </div>
        ))
      }
    </div>
  </div>

  <style>
    .servicios {
      padding: var(--spacing-2xl) 0;
      min-height: 90vh;
      display: flex;
      align-items: center;
    }

    .servicios__grid {
      margin-top: var(--spacing-xl);
    }
  </style>
</section>
