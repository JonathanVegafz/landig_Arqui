---
import SectionHeader from '../ui/SectionHeader.astro';
import ServiceCard from '../ui/ServiceCard.astro';
import { SERVICES } from '../../lib/constants-loader';
---

<section class="servicios section-bg-gray" id="servicios" aria-labelledby="servicios-title">
  <div class="container">
    <SectionHeader
      subtitle="Servicios de Arquitectura"
      title="Soluciones Arquitectónicas Profesionales"
      description="Como arquitectos profesionales, ofrecemos servicios especializados en 5 regiones de Chile, combinando innovación, sustentabilidad y diseño personalizado."
    />

    <div class="servicios__grid grid-auto-fit" role="list" aria-label="Lista de servicios especializados">
      {
        SERVICES.map((servicio: { id: number; title: string; features: string[] }) => (
          <div role="listitem">
            <ServiceCard title={servicio.title} features={servicio.features} />
          </div>
        ))
      }
    </div>
  </div>

  <style>
    .servicios {
      padding: var(--spacing-2xl) 0;
      min-height: 90vh;
      display: flex;
      align-items: center;
    }

    .servicios__grid {
      margin-top: var(--spacing-xl);
    }
  </style>
</section>
