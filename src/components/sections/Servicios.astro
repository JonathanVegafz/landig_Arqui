---
import SectionHeader from '../ui/SectionHeader.astro';
import ServiceCard from '../ui/ServiceCard.astro';
import { SERVICES } from '../../lib/constants-loader';
import type { ServiceProps } from '../../types';
---

<section class="servicios section-bg-white" id="servicios" aria-label="Nuestros Servicios">
  <div class="container">
    <SectionHeader 
      subtitle="Nuestros Servicios"
      title="Soluciones Integrales para tu Hogar"
      description="Ofrecemos servicios especializados que combinan innovaciÃ³n, calidad y eficiencia para crear espacios que trascienden el tiempo."
    />
    
    <div class="servicios__grid grid-auto-fit" aria-label="Servicios ofrecidos">
      {SERVICES.map((servicio: ServiceProps) => (
        <ServiceCard 
          icon={servicio.icon}
          title={servicio.title}
          features={servicio.features}
        />
      ))}
    </div>
  </div>
  
  <style>
    .servicios {
      padding: var(--spacing-2xl) 0;
      min-height: 90vh;
      display: flex;
      align-items: center;
    }
    
    .servicios__grid {
      margin-top: var(--spacing-xl);
      position: relative;
      z-index: 2;
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    .servicio-item {
      list-style: none;
    }
  </style>
</section>