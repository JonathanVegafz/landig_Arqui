      </div>
    </div>
  </div>
  <style>
    .hero.parallax {
      background: url('${imagen1.src}') center center / cover no-repeat;
      min-height: 100%;
      height: 100vh;
      width: 100vw;
      max-width: 100%;
      display: flex;
      align-items: center;
      position: relative;
      overflow-x: hidden;
      overflow-y: hidden;
    }
    .hero__overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.65);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1;
    }
    .hero__content {
      color: #fff;
      text-align: center;
      padding: 4rem 0;
      width: 100%;
      position: relative;
      z-index: 2;
    }
    .hero-logo {
      width: 90px;
      margin-bottom: 1.5rem;
      background: #fff;
      border-radius: 10px;
      padding: 0.3rem 0.7rem;
      box-shadow: 0 2px 12px rgba(0,0,0,0.10);
    }
    .hero__content h1 {
      font-size: 2.7rem;
      font-weight: 800;
      margin-bottom: 1rem;
    }
    .hero__content p {
      font-size: 1.3rem;
      font-weight: 400;
      margin-bottom: 2rem;
    }
    .cta-btn {
      background: var(--color-primary);
      color: #fff;
      padding: 0.9rem 2.2rem;
      border-radius: 6px;
      font-size: 1.1rem;
      font-weight: 600;
      text-decoration: none;
      transition: background 0.2s;
      box-shadow: 0 2px 12px rgba(0,0,0,0.10);
      margin: 0 0.5rem 0 0;
    }
    .cta-btn:hover {
      background: var(--color-secondary);
      color: #fff;
    }
    .hero-btns {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1.2rem;
      flex-wrap: wrap;
    }
    .whatsapp-btn {
      display: inline-flex;
      align-items: center;
      background: #128C7E;
      color: #fff;
      padding: 0.9rem 2.2rem;
      border-radius: 6px;
      font-size: 1.1rem;
      font-weight: 600;
      text-decoration: none;
      box-shadow: 0 2px 12px rgba(0,0,0,0.10);
      transition: background 0.2s, color 0.2s;
    }
    .whatsapp-btn:hover {
      background: #25D366;
      color: #fff;
    }
    .typewriter {
      min-height: 3.2em;
      font-size: 1.3rem;
      font-weight: 400;
      margin-bottom: 2rem;
      display: inline-block;
      border-right: 2px solid #fff;
      white-space: nowrap;
      overflow: hidden;
      letter-spacing: 0.5px;
      animation: blink-caret 0.7s step-end infinite;
    }
    @keyframes blink-caret {
      0%, 100% { border-color: transparent; }
      50% { border-color: #fff; }
    }
    @media (max-width: 700px) {
      .hero-btns {
        flex-direction: column;
        gap: 0.7rem;
      }
      .hero__content h1 {
        font-size: 1.5rem;
      }
      .hero__content p {
        font-size: 1rem;
      }
      .hero.parallax {
        background-attachment: scroll;
        min-height: 100vh;
        height: 100vh;
        width: 100vw;
        max-width: 100vw;
        overflow-x: hidden;
      }
    }
  </style>
</section>
<script is:inline>
const frases = [
  "Con casi 20 años de experiencia en la V Región, convertimos tu visión en una realidad tangible.",
  "Proyectos de alta calidad, diseñados para vivir.",
  "Arquitectura personalizada, eficiencia y confianza.",
  "¡Haz realidad tu proyecto con nosotros!"
];
let i = 0, j = 0, borrando = false, fraseActual = 0;
const velocidad = 55;
const pausa = 1200;
const typewriter = () => {
  const p = document.getElementById('typewriter');
  if (!p) return;
  if (!borrando && j <= frases[fraseActual].length) {
    p.textContent = frases[fraseActual].slice(0, j++);
    setTimeout(typewriter, velocidad);
  } else if (borrando && j >= 0) {
    p.textContent = frases[fraseActual].slice(0, j--);
    setTimeout(typewriter, velocidad / 1.7);
  } else if (!borrando) {
    borrando = true;
    setTimeout(typewriter, pausa);
  } else {
    borrando = false;
    fraseActual = (fraseActual + 1) % frases.length;
    setTimeout(typewriter, velocidad);
  }
};
window.addEventListener('DOMContentLoaded', typewriter);
</script> 