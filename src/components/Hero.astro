---
import Logo from '../assets/Logo.png';
import imagen1 from '../assets/hero.jpg';
---

<section class="hero parallax" id="inicio" aria-label="Sección principal: Arquitectura que Inspira" style={`background-image: url('${imagen1.src}');`}>
  <div class="hero__overlay">
    <div class="container hero__content">
      <h1>Arquitectura que Inspira. Construcción que Perdura.</h1>
      <p id="typewriter-p" class="typewriter" aria-live="polite"></p>
      
      <div class="hero-btns">
        <a href="#cotiza" class="cta-btn">Cotiza tu Proyecto</a>
        <a href="https://wa.me/56945150212" class="cta-btn whatsapp-btn" target="_blank" rel="noopener" aria-label="Contáctanos por WhatsApp">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="vertical-align:middle;margin-right:8px;">
            <path d="M20.52 3.48A12.07 12.07 0 0 0 12 0C5.37 0 0 5.37 0 12c0 2.11.55 4.18 1.6 6.01L0 24l6.18-1.62A11.94 11.94 0 0 0 12 24c6.63 0 12-5.37 12-12 0-3.19-1.24-6.19-3.48-8.52zM12 22c-1.77 0-3.5-.46-5.01-1.33l-.36-.21-3.67.96.98-3.58-.23-.37A9.94 9.94 0 0 1 2 12C2 6.48 6.48 2 12 2c2.54 0 4.93.99 6.73 2.77A9.93 9.93 0 0 1 22 12c0 5.52-4.48 10-10 10zm5.2-7.6c-.28-.14-1.65-.81-1.9-.9-.25-.09-.43-.14-.61.14-.18.28-.7.9-.86 1.08-.16.18-.32.2-.6.07-.28-.14-1.18-.44-2.25-1.4-.83-.74-1.39-1.65-1.55-1.93-.16-.28-.02-.43.12-.57.12-.12.28-.32.42-.48.14-.16.18-.28.28-.46.09-.18.05-.34-.02-.48-.07-.14-.61-1.47-.84-2.01-.22-.53-.45-.46-.61-.47-.16-.01-.34-.01-.52-.01-.18 0-.48.07-.73.34-.25.27-.97.95-.97 2.3 0 1.35.99 2.65 1.13 2.83.14.18 1.95 2.98 4.73 4.06.66.28 1.18.45 1.58.58.66.21 1.26.18 1.73.11.53-.08 1.65-.67 1.88-1.32.23-.65.23-1.2.16-1.32-.07-.12-.25-.18-.53-.32z" fill="#fff"/>
          </svg>
          WhatsApp
        </a>
      </div>
    </div>
  </div>
  <style>
    .hero.parallax { background: center center / cover no-repeat; min-height: 100vh; display: flex; align-items: center; position: relative; }
    .hero__overlay { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.65); display: flex; align-items: center; justify-content: center; z-index: 1; }
    .hero__content { color: #fff; text-align: center; padding: 2rem 1rem; position: relative; z-index: 2; }
    .hero__content h1 { font-size: 2.7rem; font-weight: 800; margin-bottom: 1rem; }
    .hero__content p { font-size: 1.3rem; margin-bottom: 2rem; }
    .hero-btns { display: flex; justify-content: center; align-items: center; gap: 1rem; flex-wrap: wrap; }
    .cta-btn { background: var(--color-primary); color: #fff; padding: 0.9rem 2.2rem; border-radius: 6px; font-weight: 600; text-decoration: none; transition: background 0.2s; box-shadow: 0 2px 12px rgba(0,0,0,0.10); }
    .cta-btn:hover { background: var(--color-secondary); }
    
    .whatsapp-btn { 
      background: #128C7E;
    }
    .whatsapp-btn:hover {
      background: #25D366;
    }

    .typewriter {
      min-height: 3.2em; 
      font-size: 1.3rem;
      font-weight: 400;
      margin-bottom: 2rem;
      max-width: 90%;
      margin-left: auto;
      margin-right: auto;
      display: inline-block; 

      width: var(--steps);
      overflow: hidden;
      white-space: nowrap; 
      border-right: 3px solid white;
      animation: blink 0.7s infinite;
    }

    @keyframes blink {
      from { border-color: white; }
      to { border-color: transparent; }
    }

    @media (max-width: 700px) {
      .hero__content h1 { font-size: 1.8rem; }
      .typewriter {
        font-size: 1.1rem;
       
        white-space: normal;
       
        width: auto; 
        border-right: none;
        animation: none;
      }
      .hero-btns { flex-direction: column; gap: 1rem; }
    }
  </style>
</section>

<script is:inline>
  const frases = [
    "Con casi 20 años de experiencia en la V Región.",
    "Proyectos de alta calidad, diseñados para vivir.",
    "Arquitectura personalizada, eficiencia y confianza.",
    "Soluciones en Metalcom, Paneles SIP y EIFS.",
    "Diseño arquitectónico que optimiza cada metro cuadrado.",
    "¡Haz realidad tu proyecto con nosotros!"
  ];

  const typewriterElement = document.getElementById('typewriter-p');
  
  const sleep = (ms) => new Promise((resolve) => setTimeout(resolve, ms));

  const runTypewriter = async () => {
    let fraseIndex = 0;
    while (true) {
      const fraseActual = frases[fraseIndex];
      
      for (let i = 0; i <= fraseActual.length; i++) {
        const isMobile = window.innerWidth <= 700;
        if (isMobile) {
          typewriterElement.textContent = fraseActual;
          typewriterElement.style.setProperty('--steps', `${fraseActual.length}ch`);
        } else {
          typewriterElement.textContent = fraseActual.substring(0, i);
        }
        await sleep(55); 
      }
      
      await sleep(2000); 


      for (let i = fraseActual.length; i >= 0; i--) {
        typewriterElement.textContent = fraseActual.substring(0, i);
        await sleep(35); 
      }
      
      await sleep(500); 
      
      fraseIndex = (fraseIndex + 1) % frases.length;
    }
  };
  
  document.addEventListener('DOMContentLoaded', runTypewriter);
</script>