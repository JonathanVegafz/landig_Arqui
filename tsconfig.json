{
  // Uso de la configuración estricta oficial de Astro. Si el editor no la resuelve (error ts2307),
  // se mantienen igualmente todas las banderas críticas abajo y se añaden los types explícitos.
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    // Asegura que los módulos virtuales (astro:assets, astro:content, etc.) y .astro tengan tipado.
    "types": ["astro/client"],
    // Declaraciones de módulos de imágenes personalizadas.
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*",
    ".astro/types.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
